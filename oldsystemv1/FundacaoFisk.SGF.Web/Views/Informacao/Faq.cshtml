@{
    ViewBag.Title = "Perguntas Frequentes";
    Layout = "~/Views/Shared/_layout.cshtml";
}

@section scripts {
    @Scripts.Render("~/bundles/faq")
    <link href="~/Content/themes/base/dojo1.8.5r/dojox/form/resources/CheckedMultiSelect.css" rel="stylesheet" />
    <link href="~/Content/themes/base/dojo1.8.5r/dojox/form/resources/UploaderFileList.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.maskedinput-1.3.js"></script>
}

@section scriptsBody{

    <script type="text/javascript">
        document.getElementById("labelTitulos").innerHTML = "Perguntas Frequentes";

        //**** Requerires para a Tabulação ****\\
        require([
				"dojo/_base/event",
				"dojox/validate/web",
				"dojox/validate/check",
				"dijit/form/NumberTextBox",
				"dijit/form/ValidationTextBox",
				"dijit/form/Form",
				"dojox/form/Manager",
				"dijit/form/TimeTextBox",
				"dijit/form/DateTextBox"
        ]);
        montarMetodosFaq();

    </script>
}

<div class="apresentadorMsg" id="apresentadorMensagem" style="display: none;"></div>

<table class="Table" style="width: 100%" id="content-table">
    <tr>
        <th rowspan="3" class="sized">
            <img src="~/images/shared/side_shadowleft.jpg" width="20" height="300" alt="" /></th>
        <th class="topleft"></th>
        <td id="tbl-border-top">&nbsp;</td>
        <th class="topright"></th>
        <th rowspan="3" class="sized">
            <img src="~/images/shared/side_shadowright.jpg" width="20" height="300" alt="" /></th>
    </tr>
    <tr>
        <td id="tbl-border-left"></td>
        <td style="height: 100%;">
            <!--  start content-table-inner ...................................................................... START -->
            <div id="content-table-inner">
                <div class="EspacoCaixa caixaPesquisa">
                    <table id="tableConceito" class="table">
                        <tr style="vertical-align: middle;">
                            <td class="tdRight" style="width: 7%;">
                                <label for="nome">Pergunta:</label></td>
                            <td style="width: 60%;" class="dojoTextBoxIECorrect">
                                <input type="text" id="_dcFaqPergunta" name="_dcFaqPergunta" style="width: 100%;" maxlength="254" data-dojo-type="dijit/form/TextBox" />                                
                            </td>
                            <td class="tdRight" style="width: 7%;">
                                <label class="AlinhaDireita;" for="inicioFaq">Início:</label>
                                <input type="checkbox" id="_dcFaqInicio" data-dojo-type="dijit/form/CheckBox" class="margemCampoEsq" />
                            </td>
                            <td class="tdRight" style="width: 7%;">
                                <label>Menu:</label></td>
                            <td class="alignDojoData" style="width: 20%;">
                                <select
                                    id="cbMenu"
                                    data-dojo-id="cbMenu"
                                    data-dojo-props='dropDown:true'
                                    name="cbMenu"
                                    multiple="true"
                                    data-dojo-type="dojox/form/CheckedMultiSelect" style="width: 100%;">
                                </select>
                            </td>
                            <td rowspan="2" class="AlinhaDireita" style="width: 15%;">
                                <input id="pesquisarFaq" />
                            </td>
                        </tr>
                    </table>
                </div>
                <div style="padding-top: 10px">
                    <div class="linha_acoes" style="width: 100%"></div>
                    <table style="width: 100%" class="Alinhamento">
                        <tr style="width: 100%">
                            <td style="text-align: left; width: 25%">
                                <div class="linkAcoes" id="linkAcoesFaq"></div>
                            </td>
                            <td style="text-align: center; width: 50%">
                                <input id="novoFaq" title="Novo" />
                            </td>
                            <td style="text-align: right; width: 25%">
                                <span class="linkSelecionados" id="linkSelecionadosFaq"></span>
                            </td>
                        </tr>
                    </table>
                    <div class="linha_acoes" style="width: 100%"></div>
                </div>
                <div data-dojo-type="dijit/layout/ContentPane" id="ContentGridFaq" style="padding-left: 0px; padding-right: 0px;">
                    <div class="gridCadBasic" style="height: 350px">
                        <div id="gridFaqs"></div>
                    </div>
                </div>
                <div id="dialogFaq" data-dojo-type="dijit/Dialog" class="Dialogo" style="max-width: 800px;" title="Cadastro de Perguntas Frequentes">
                    <div class="apresentadorMsg" id="apresentadorMensagemFaq" style="display: none;"></div>
                    <div class="corpo_interno">

                        <div class="scroll">

                            <form data-dojo-type="dojox/form/Manager" enctype="multipart/form-data" class="Formulario" id="formFaq" style="width: 100%">
                                <input id="cd_faq" type="hidden" hidden />
                                @*<input id="cd_video" type="text"  />*@
                                <div style="width: 98%; height: 220px;" class="scroll">
                                    <table class="Table">
                                        <tr>
                                            <td class="CorpoFormAux AlinhaDireita nowrap" style="width: 5%">
                                                <label>Pergunta:</label></td>
                                            <td class="nowrap" style="width: 20%">
                                                <input id="faqPergunta" name="faqPergunta" size="61" maxlength="254" style="width: 100%;" required="required"
                                                    data-dojo-type="dijit/form/ValidationTextBox" />
                                            </td>
                                            <td class="CorpoFormAux AlinhaDireita nowrap" style="width: 5%">
                                                <label>Menu:</label></td>
                                            <td class="nowrap" style="width: 15%">
                                                <select id="cbMenuCad" name="cbMenuCad" data-dojo-type="dijit/form/FilteringSelect" required="true" style="width: 90%;"></select>
                                            </td>

                                        </tr>

                                        <tr>
                                            <td class="CorpoFormAux AlinhaDireita nowrap" style="width: 5%">
                                                <label>Resposta:</label></td>
                                            <td colspan="5" class="nowrap" style="width: 20%">
                                                <textarea placeholder="Resposta" id="faqResposta" name="faqResposta" required="required" data-dojo-type="dijit/form/SimpleTextarea" rows="6" cols="50" style="width: 96%;"></textarea>
                                            </td>
                                        </tr>

                                        <tr>
                                            <td class="CorpoFormAux AlinhaDireita nowrap" style="width: 5%">
                                            <td colspan="5" class="nowrap" style="width: 20%">
                                                <input id="NomeArquivo" name="NomeArquivo" size="61" style="width: 92%;"
                                                    data-dojo-type="dijit/form/ValidationTextBox" readonly="true" />

                                                <input
                                                    data-dojo-props='iconClass:"dijitEditorIcon dijitEditorIconUpload" '
                                                    id="uploaderVideoIncluir"></input>
                                                <div id="myDivIncluir" style="width: 92%;"></div>

                                                <input
                                                    data-dojo-props='iconClass:"dijitEditorIcon dijitEditorIconUpload" '
                                                    id="uploaderVideoEditar"></input>
                                                <div id="myDivEditar"></div>
                                            </td>

                                        </tr>


                                    </table>
                                </div>
                                <div class="containerCrud" style="width: 100%; padding-top: 20px;">
                                    <div class="linha_acoes" style="width: 100%"></div>
                                    <div style="text-align: center">
                                        <span id="divIncluirFaq">
                                            <input type="button" id="incluirFaq" title="incluir" /></span>
                                        <span id="divAlterarFaq" style="display: none;">
                                            <input type="button" id="alterarFaq" title="Alterar" /></span>
                                        <span id="divExcluirFaq" style="display: none;">
                                            <input type="button" id="deleteFaq" title="Excluir" /></span>
                                        <span id="divLimparFaq">
                                            <input type="button" id="limparFaq" title="Limpar" /></span>
                                        <span id="divCancelarFaq" style="display: none;">
                                            <input type="button" id="cancelarFaq" title="Cancelar" /></span>
                                        <span id="divFecharFaq">
                                            <input type="button" id="fecharFaq" title="Fechar" /></span>
                                    </div>
                                    <div class="linha_acoes" style="width: 100%"></div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="playerVideo" id="playerVideo"></div>

            </div>
            <!--  end content-table-inner ............................................END  -->
        </td>
        <td id="tbl-border-right"></td>
    </tr>
    <tr>
        <th class="sized bottomleft"></th>
        <td id="tbl-border-bottom">&nbsp;</td>
        <th class="sized bottomright"></th>
    </tr>
</table>
