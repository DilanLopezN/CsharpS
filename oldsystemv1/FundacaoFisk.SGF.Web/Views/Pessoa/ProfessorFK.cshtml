@Scripts.Render("~/bundles/professorFK")
<script src="~/Scripts/jquery.maskedinput-1.3.js"></script>
@section scripts {
    <link href="~/Content/themes/base/dojo1.8.5r/dojox/form/resources/CheckedMultiSelect.css" rel="stylesheet" />
}
<script type="text/javascript">
</script>

<div class="corpo_interno">
    <div class="EspacoCaixa caixaPesquisa">
        <table class="Table">
            <tr>
               <td class="tdRight" style="width: 5%">
                    <label for="nomeProf" class="tdRight">Nome: </label>
                </td>
                <td style="width: 25%">
                    <input id="nomeProf" maxlength="64" type="text" data-dojo-type="dijit/form/TextBox" class="campoGrande" style="width: 100%">
                </td>
                <td class="tdRight" style="width: 7%;">
                    <label for="nomeRed">Reduzido:</label></td>
                <td class="dojoTextBoxIECorrect" style="width: 30%;">
                    <input type="text" id="nomeRed" name="nomeRed" style="width: 100%;" data-dojo-type="dijit/form/TextBox" />
                </td>
                 <td class="tdRight" style="width: 7%;">
                    <label class="tdRight;" for="inicioProf">Início:</label>
                </td>
                <td style="width: 3%;" class="dojoTextBoxIECorrect">                    
                    <input type="checkbox" id="inicioProf" data-dojo-type="dijit/form/CheckBox" class="margemCampoEsq" />
                </td>
                
                <td rowspan="2" class="tdRight" style="width:7%;">
                    <input id="pesquisarProfessorFK"/>
                </td>
            </tr>
            <tr>
                <td class="tdRight" style="width: 5%">
                    <label for="cpfProf" class="tdRight">CPF: </label>
                </td>
                <td>
                    <input id="cpfProf" name="cpfProf" maxlength="64" type="text" data-dojo-type="dijit/form/TextBox" class="campoGrande" style="width: 60%" />
                </td>
                <td class="tdRight" style="width: 7%;">
                    <label for="statusProf" class="AlinhaDireita;">Status:</label>
                </td>
                <td style="width: 5%;" class="dojoTextBoxIECorrect">
                    <input id="statusProf" class="margemCampoEsq" />
                </td>
                <td class="tdRight" style="width: 7%">
                    <label class="AlinhaDireita;" for="nm_sexo_prof">Gênero:</label>
                </td>
                <td style="width: 10%;">
                     <select id="nm_sexo_prof" name="nm_sexo_prof"  data-dojo-type="dijit/form/FilteringSelect" style="width: 100%;"></select>
                </td>
            </tr>
            <tr id="trHorarios" style="display:none">
                <td class="tdRight" style="width: 5%">
                    <label for="cbHorarios" title="Horários a serem ocupados pelo professor.">Horários:</label>
                </td>
                <td colspan="5">
                    <select id="cbHorarios" data-dojo-id="cbHorarios" data-dojo-props='dropDown:true' name="cbHorarios" data-dojo-type="dojox/form/CheckedMultiSelect" style="width: 100%, max-width:304px;" multiple="true" required="true"></select>
                </td>
            </tr>
        </table>
    </div>
    <div style="padding-top: 5px; width: 100%">
        <div class="linha_acoes" style="width: 100%"></div>
        <table style="width: 100%">
            <tr style="width: 100%">
                <td style="text-align: center; width: 100%;">
                    <input type="button" id="selecionaProfessorFK" />&nbsp;
                    <input type="button" id="fecharProfessorFK" title="Fechar" />&nbsp;
                </td>
            </tr>
        </table>
        <div class="linha_acoes" style="width: 100%"></div>
    </div>
    <input id="ehSelectGradeProfessorFK" type="hidden" value="false" />
    <div style="width: 100%; height: 415px;" id="divGridPesquisaProfessor">
        <div data-dojo-type="dijit/layout/ContentPane" id="panelProfFK" style="width: 100%; height: 380px; padding-top: 5px; padding-left: 0px">
            <div id="gridPesquisaProfessor"></div>
        </div>
    </div>
</div>
