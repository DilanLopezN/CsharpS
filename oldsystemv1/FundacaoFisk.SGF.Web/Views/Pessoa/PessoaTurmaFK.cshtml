<script src="~/Scripts/jquery.maskedinput-1.3.js"></script>
<div class="corpo_interno">
    <div class="apresentadorMsg" id="apresentadorMensagemProPessoaTurma" style="display:none;"></div>
    <div class="EspacoCaixa caixaPesquisa">
        <table class="Table">
            <tr>
                <td class="tdRight" style="width:7%"><label>Nome:</label></td>
                <td class="dojoTextBoxIECorrect" style="width:24%"><input type="text" id="_nomePessoaTurmaFK" name="Nome" size="100" data-dojo-type="dijit/form/TextBox" style="width:100%;"/></td>
                <td class="tdRight" style="width:7%"><label id="lblNomRezudioPessoaTurmaFK">Nome Reduzido:</label></td>
                <td class="dojoTextBoxIECorrect" style="width:24%"><input type="text" id="_apelidoTurma" name="Apelido"  size="100" data-dojo-type="dijit/form/TextBox" style="width:100%;"/> </td>
                <td class="tdRight nowrap" style="width:7%">
                    <label class="AlinhaDireita;" for="inicioPessoaRelTurmaFK">Início:</label></td>
                <td class="dojoTextBoxIECorrect" style="width: 24%">
                    <input type="checkbox" id="inicioPessoaTurmaFK" data-dojo-type="dijit/form/CheckBox" class="margemCampoEsq" /></td>
                <td  rowspan="2" style="padding-left:10px;width:10%">
                    <input data-dojo-type="dijit/form/Button" data-dojo-props="iconClass:'dijitEditorIconSearchSGF'" type="button" id="pesqPessoaTurma" />
                </td>
            </tr>
            <tr>
                <td class="tdRight; nowrap" style="text-align: right;">
                    <label>Natureza:</label></td>
                <td style="text-align: right; " class="dojoTextBoxIECorrect" >
                    <input type="text" id="tipoPessoaTurmaFK" name="Tipo Pessoa" /></td>
                <td class="tdRight">
                    <label>CPF \ CNPJ:</label></td>
                <td class="dojoTextBoxIECorrect" >
                    <input type="text" id="CnpjCpfTurma" name="CnpjCpf" readonly="true" size="11" data-dojo-type="dijit/form/TextBox" /></td>
                <td class="tdRight" style="width:5%">
                    <label>Gênero:</label></td>
                <td class="dojoTextBoxIECorrect"  style="width: 20%">
                    <select id="sexoPessoaTurmaFK" name="sexoPessoaFK"  data-dojo-type="dijit/form/FilteringSelect" style="width: 100%;"></select></td>
            </tr>
            <tr id="trLocalidadeTurma" style="display:none">
                <td class="tdRight">
                    <label for="estadFKLogradouro">Estado: </label>
                </td>
                <td style="text-align: right; " class="dojoTextBoxIECorrect" >
                    <input
                                    id="cb_estado_turma_fk"
                                    name="cb_estado_fk"
                                    size="10"
                                    data-dojo-type="dijit/form/FilteringSelect"
                                    style="width: 100%;"
                                    aria-sort="descending"
                                    required="false"
                                    autocomplete="on" /></td>
                <td class="tdRight">
                    <label for="cb_cidade">Cidade: </label></td>
                <td style="width: 62%;" colspan="3">
                    <table class="Table">
                        <tr>
                            <td style="width: 60%" class="dojoTextBoxIECorrect">
                                <input type="hidden" id="cd_cidade_escola_turmaFK" value="0" />
                                <table class="Table">
                                    <tr>
                                        <td style="width: 72%" class="dojoTextBoxIECorrect">
                                            <input id="cb_cidade_turma_fk" name="cb_cidade_fk" style="width: 100%;" readonly="true" data-dojo-type="dijit/form/ValidationTextBox" required="required" maxlength="128" />
                                        </td>
                                        <td class="tdRight nowrap" style="width: 38%">
                                            <input data-dojo-type="dijit/form/Button" data-dojo-props="iconClass:'dijitEditorIcon dijitEditorIconFindSGF'" id="pesCidadeEscolaTurmaFK" />
                                            <button data-dojo-type="dijit/form/Button" data-dojo-props="iconClass:''" disabled="disabled" id="limparCidadeEscolaTurmaFK">Limpar</button>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </div>
    <div style="padding-top: 5px; width: 100%">
        <div class="linha_acoes" style="width: 100%"></div>
        <table style="width: 100%">
            <tr style="width: 100%">
                <td style="text-align: center; width: 100%;">
                    <input type="button" id="selecPessoaTurma" />&nbsp;
                    <input type="button" id="fecharPessoaTurmaFK" title="Fechar" />&nbsp;
                </td>
            </tr>
        </table>
        <div class="linha_acoes" style="width: 100%"></div>
    </div>
    <input id="idOrigemPessoaTurmaFK" type="hidden" />
    <div data-dojo-type="dijit/layout/ContentPane" id="panePessoaTurmaFK" style="height: 385px; padding-top: 5px; padding-left: 0px;">
        <div id="gridPesquisaPessoaTurma"></div>
    </div>
</div>
