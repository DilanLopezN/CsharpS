@Scripts.Render("~/bundles/cidadeFk")
<input type="hidden" id="setValuePesquisaLogradouroFK" value="0" />

<div class="corpo_interno" style="height:inherit">
    <div class="apresentadorMsg" id="apresentadorMensagemLogradouroFK" style="display: none;"></div>
    <div class="EspacoCaixa caixaPesquisa">
        <form data-dojo-type="dojox/form/Manager" id="formPesquisaLogradouro" name="formPesquisaLogradouro">
            <table class="Table">
                <tr>
                    <td class="tdRight nowrap" style="width: 10%;">
                        <img alt="" style="display:none" src="~/images/help.png" id="imgIntDescricaoPesqLogradouro" /><label for="descricaoLogradouroFK">Descrição: </label>
                    </td>
                    <td style="width: 60%;" class="dojoTextBoxIECorrect nowrap">
                        <input id="descricaoLogradouroFK" name="descricaoLogradouroFK" maxlength="128" required="required" type="text" data-dojo-type="dijit/form/ValidationTextBox" style="width: 100%">
                    </td>
                    <td class="tdRight" style="width: 13%;">
                        <label class="AlinhaDireita;" for="outrosLogradouros">Correios:</label>
                    </td>
                    <td style="width: 7%;" class="dojoTextBoxIECorrect">
                        <input type="checkbox" id="outrosLogradouros" data-dojo-type="dijit/form/CheckBox" class="margemCampoEsq" />
                    </td>
                    <td rowspan="2" class="AlinhaDireita" style="width: 10%;">
                        <input id="pesquisarLogradouroFK" title="Pesquisar" />
                    </td>
                </tr>
                <tr> @*id="trNumeroEndereco" style="display:none">*@
                    <td class="tdRight" style="width: 10%;">
                        <label for="numeroEndereco">Número:</label>
                    </td>
                    <td style="width: 80%;" class="dojoTextBoxIECorrect" colspan="3">
                        <input id="numeroEndereco" name="numeroEndereco" data-dojo-type="dijit/form/TextBox" style="width: 20%;" />
                    </td>
                </tr>
                <tr>
                    <td class="tdRight" style="width: 10%;">
                        <label for="estadFKLogradouro">Estado: </label>
                    </td>
                    <td style="width: 80%;"> @* colspan="3">*@
                        <table class="Table">
                            <tr>
                                <td style="width: 20%;">
                                    <input
                                        id="estadFKLogradouro"
                                        name="estadFKLogradouro"
                                        size="10"
                                        data-dojo-type="dijit/form/FilteringSelect"
                                        style="width: 100%;"
                                        aria-sort="descending"
                                        required="required"
                                        autocomplete="on" />
                                </td>
                                <td class="tdRight" style="width: 10%;">
                                    <label for="pesNomCidadeLogradouroFK">Cidade: </label>
                                </td>
                                <td style="width: 70%" class="dojoTextBoxIECorrect">
                                     <input type="hidden" id="cd_cidade_pesq_logradouroFK" value="0" />
                                    <table class="Table">
                                        <tr>
                                            <td style="width: 72%" class="dojoTextBoxIECorrect">
                                                <input id="pesNomCidadeLogradouroFK" name="pesNomCidadeLogradouroFK" style="width: 100%;" readonly="true" data-dojo-type="dijit/form/ValidationTextBox" required="required" maxlength="128" />
                                            </td>
                                            <td class="tdRight" style="width: 38%">
                                                <input data-dojo-type="dijit/form/Button" data-dojo-props="iconClass:'dijitEditorIcon dijitEditorIconFindSGF'" id="pesCidadeLogradouroFK" />
                                                <button data-dojo-type="dijit/form/Button" data-dojo-props="iconClass:''" disabled="disabled" id="limparCidadeLogradouroPesFK">Limpar</button>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td class="tdRight" style="width: 10%;">
                        <label for="bairroLogradouroFK">Bairro:</label>
                    </td>
                    <td style="width: 30%;" class="dojoTextBoxIECorrect" colspan="3">
                        <select id="bairroLogradouroFK" name="bairroLogradouroFK" disabled="disabled" required="false" data-dojo-type="dijit/form/FilteringSelect" style="width: 50%;"></select>
                    </td>
                </tr>
            </table>
        </form>
    </div>
    <div style="padding-top: 5px; width: 100%">
        <div class="linha_acoes" style="width: 100%"></div>
        <table style="width: 100%">
            <tr style="width: 100%">
                <td style="text-align: center; width: 100%;">
                    <input type="button" id="selecionalogradouroFK" />&nbsp;
                    <input type="button" id="fecharLogradouroFK" title="Fechar" />&nbsp;
                </td>
            </tr>
        </table>
        <div class="linha_acoes" style="width: 100%"></div>
    </div>
    <div style="width: 100%; height: 400px;padding-bottom:5px;">
        <div data-dojo-type="dijit/layout/ContentPane" id="panelLogradouroFK" style="width: 100%; height: 400px; padding-top: 5px; padding-left: 0px">
            <div id="gridLogradouroFK"></div>
        </div>
    </div>
</div>

 <div data-dojo-type="dijit.Dialog" id="dialogConsultaCidade" title="Pesquisar Cidade" style="width: 600px; display: none;">
    @Html.Partial("../Pessoa/CidadeFK")
</div>

<div data-dojo-type="dijit/Tooltip" data-dojo-props="connectId:'imgIntDescricaoPesqLogradouro',position:['below']">
	Para melhor precisão de busca, informar o logradouro seguido do número
	<br />
	e também informar a cidade e estado nos respectivos campos de filtro.<br />
</div>

