
@Scripts.Render("~/bundles/tipoDescontoFK")
<div class="corpo_interno" style="height: 90%">
    <div class="apresentadorMsg" id="apresentadorMensagemTipoDescontoFK" style="display: none;"></div>
    <div class="EspacoCaixa caixaPesquisa">
        <table class="Table">
            <tr>
                <td class="tdRight" style="width: 10%;">
                    <label for="pesquisaTipoDesconto">Descrição: </label>
                </td>
                <td style="width: 50%;">
                    <input id="pesquisaTipoDescontoFK" type="text" data-dojo-type="dijit/form/TextBox" class="campoGrande" style="width: 100%"></td>
                <td class="tdRight" style="width: 10%;">
                    <label class="AlinhaDireita;">Início:</label></td>
                <td style="width: 20%;">
                    <input type="checkbox" id="inicioDescTipoDescontoFK" data-dojo-type="dijit/form/CheckBox" class="Check" /></td>
                <td rowspan="2" style="text-align: right; width: 10%;">
                    <input id="pesquisarTipoDescontoFK" />
                </td>
            </tr>
            <tr>
                <td class="tdRight">
                    <label for="statusTipoDescontoFK">Status:</label></td>
                <td>
                    <input id="statusTipoDescontoFK" class="margemCampoEsq"></td>
                <td class="tdRight" style="width: 0px;">
                    <label for="incideBaixaFK">Incide Baixa:</label></td>
                <td>
                    <input id="incideBaixaFK"></td>
                <td style="text-align: right;"></td>
            </tr>
            <tr>
                <td class="tdRight">
                    <label for="pparcFK" style="margin-left: 2%;display:none;">1º Parcela:</label>
                </td>
                <td>
                    <div style="display:none;">
                        <input id="pparcFK">
                    </div>
                </td>
                <td class="tdRight">
                    <label for="percentualFK" style="margin-left: 2%">Percentual: </label>
                </td>
                <td>
                    <input type="text"
                        id="percentualFK"
                        maxlength="6"
                        style="width: 77%;"
                        data-dojo-type="dijit/form/NumberTextBox"
                        data-dojo-props="smallDelta:1, constraints:{min:0, max:100, pattern:'000.##'}"
                        onkeypress="mascaraFloat(document.getElementById('percentualFK'));" /></td>
                <td style="text-align: right;"></td>
            </tr>
        </table>
    </div>
    <div style="padding-top: 5px; width: 100%">
        <div class="linha_acoes" style="width: 100%"></div>
        <table style="width: 100%">
            <tr style="width: 100%">
                <td style="text-align: center; width: 100%;">
                    <input type="button" id="selecionaTipoDescontoFK" />&nbsp;
                    <input type="button" id="fecharTipoDescontoFK" title="Fechar" />
                </td>
            </tr>
        </table>
        <div class="linha_acoes" style="width: 100%"></div>
    </div>
    
    <input id="idOrigemTipoDescFK" type="hidden" />
    <div style="width: 100%; height: 400px;">
        <div data-dojo-type="dijit/layout/ContentPane" id="panelTipoDescontoFK" style="width: 100%; height: 475px; padding-top: 5px; padding-left: 0px">
            <div id="gridPesquisaTipoDescontoPai" style="height: 475px">
                <div id="gridTipoDescontoFK" style="height: 370px"></div>
            </div>
        </div>
    </div>
</div>
