
@Scripts.Render("~/bundles/planoContasFK")
<div class="corpo_interno">
    <input id="tipoRetorno" type="hidden"/>
    <div class="apresentadorMsg" id="apresentadorMensagemPlanoContasFK" style="display:none;"></div>
    <div class="EspacoCaixa caixaPesquisa">
        <form id="formPlanoContasFK" name="formPlanoContasFK" data-dojo-type="dojox/form/Manager">
		    <table class="Table">
				    <tr style="vertical-align: middle;">
					    <td class="tdRight" style="width: 10%;">
						    <label for="descricaoPlanoContas">Descrição: </label>
					    </td>
					    <td style="width: 30%;" class="dojoTextBoxIECorrect">
						    <input id="descricaoPlanoContas" name="descricaoPlanoContas" type="text" data-dojo-type="dijit/form/TextBox" class="campoGrande" style="width: 100%">
                        </td>
					    <td class="tdRight" style="width: 0px;">
						    <label class="AlinhaDireita;">Início</label></td>
					    <td>
						    <input type="checkbox" id="inicioDescricaoPlanoContas" data-dojo-type="dijit/form/CheckBox" class="Check" /></td>
					    <td rowspan="2" style="text-align: right;">
						    <input id="pesquisarPlanoFK" title="Pesquisar" /></td>
				    </tr>
		    </table>
        </form>
	</div>
	<div style="padding-top: 5px; width: 100%">
        <div class="linha_acoes" style="width: 100%"></div>
        <table style="width: 100%">
            <tr style="width: 100%">
                <td style="text-align: center; width: 100%;">
                    <input type="button" id="selecionaPlanoContasFK" />&nbsp;
                    <input type="button" id="fecharPlanoContasFK" title="Fechar" />
                </td>
            </tr>
        </table>
        <div class="linha_acoes" style="width: 100%"></div>
    </div>
    <div style="width: 100%; height: 425px;">
        <div data-dojo-type="dijit/layout/ContentPane" id="panelPlanoContasFK" style="width: 100%; height: 475px; padding-top: 5px; padding-left: 0px">
            <div id="gridPesquisaPlanoContasPai" style="height:420px">
                 <div id="gridPesquisaPlanoContas" style="height:420px"></div>
            </div>
        </div>
    </div>
</div>
