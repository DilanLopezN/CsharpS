<div class="apresentadorMensagem" id="apresentadorMensagem" style="display: none;"></div>

<div>
    <div class="EspacoCaixa caixaPesquisa">
        <input type="hidden" id="setValuePermissoes" value="" />
        <form name="formFiltros" id="formFiltros" data-dojo-type="dojox/form/Manager" style="width: 100%">
            <table class="Table">
                <tr>
                    <td style="width: 95%;">
                        <div data-dojo-type="dijit/TitlePane" data-dojo-props="title: 'Filtros'" id="panePesqGeral" open="true">
                            <table class="Table">
                                <tr>
                                    <td class="Pesquisa tdRight nowrap" style="width: 5%">
                                        <label class="AlinhaDireita">Local Movimento:</label>
                                    </td>
                                    <td style="width: 30%" class="dojoTextBoxIECorrect">
                                        <select id="lista_localmovt_cartao" name="lista_localmovt_cartao" style="width: 100%;" data-dojo-type="dijit/form/FilteringSelect" required="false"/>
                                    </td>
                                    <td class="Pesquisa tdRight nowrap" style="width:5%;">
                                        <label class="AlinhaDireita">Cartão:</label>
                                    </td>
                                    <td style="width: 20%; " class="dojoTextBoxIECorrect">
                                        @*<input data-dojo-type="dijit/form/FilteringSelect" style="width: 100%;" disabled="disabled"/>*@
                                        <select id="lista_localmovt_local_banco" name="lista_localmovt_local_banco" style="width: 100%;" data-dojo-type="dijit/form/FilteringSelect" disabled="disabled" required="false"/>
                                    </td>
                                    <td class="Pesquisa tdRight" style="width: 5%">
                                        <label class="AlinhaDireita">Usuário:</label>
                                    </td>
                                    <td style="width: 20%" class="dojoTextBoxIECorrect">
                                        <input type="hidden" id="cdFkUsuario"/>
                                        <input type="text" id="no_usuario" name="no_usuario" style="width: 100%;" data-dojo-type="dijit/form/TextBox" disabled="disabled"/>
                                    </td>
                                </tr>
                                <tr>

                                    <td class="CorpoFormAux AlinhaDireita nowrap" style="width: 17%;">
                                        <label>Data Cadastramento:</label></td>
                                    <td class="dojoTextBoxIECorrect">
                                        <table class="Table">
                                            <tr>
                                                <td style="width: 50%" class="nowrap">
                                                    <input
                                                        type="text" id="dtaCadastro" name="dtaCadastro"
                                                        data-dojo-type="dijit.form.DateTextBox"
                                                        class="alignDojoData"
                                                        disabled="true"
                                                        required="true"
                                                        onkeypress="mascaraDataHora(event, this)" maxlength="10"/>
                                                    <input type="text" id="horaCadastro" data-dojo-props="constraints: { timePattern: 'HH:mm:ss' }" name="horaCadastro" data-dojo-type="dijit/form/TimeTextBox" required="true" style="width: 85px;" disabled="disabled"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                            <div data-dojo-type="dijit/TitlePane" data-dojo-props="title: 'Período de Vencimento'" id="paPeriodo" open="true">
                                <table class="Table">
                                    <tr>
                                        <td class="Pesquisa tdRight" style="width: 10%">
                                            <label for="dtaInicial">Data Inicial:</label>
                                        </td>
                                        <td style="width: 15%" class="dojoTextBoxIECorrect">
                                            <input type="text" id="dtaInicial" data-dojo-type="dijit.form.DateTextBox" class="alignDojoData" style="width: 100%;"/>
                                        </td>
                                        <td class="tdRight" style="width: 10%">
                                            <label for="dtaInicial" class="AlinhaDireita">Data Final:</label>
                                        </td>
                                        <td style="width: 20%" class="dojoTextBoxIECorrect">
                                            <input type="text" id="dtaFinal" data-dojo-type="dijit.form.DateTextBox" class="alignDojoData" required="true" style="width: 100%;" required="required"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </td>
                    <td style="width: 5%; text-align: center">
                        <input id="pesquisarTitulos" title="Pesquisar"/>
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>

