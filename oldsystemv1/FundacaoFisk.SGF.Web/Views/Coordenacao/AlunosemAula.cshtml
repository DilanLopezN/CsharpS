@{
    ViewBag.Title = "Aluno sem Aula";
    Layout = "~/Views/Shared/_layout.cshtml";
}

@section scriptsBody{
    @Scripts.Render("~/bundles/alunosemaula")
    @Scripts.Render("~/bundles/alunoFK")
    @Scripts.Render("~/bundles/ItemFK")
    <script type="text/javascript">
        document.getElementById("labelTitulos").innerHTML = "Aluno sem Aula";

        //**** Requerires para a Tabulação ****\\
        require([
                "dijit/form/TextBox",
                "dijit/Dialog",
                "dojo/_base/event",
                "dojox/validate/web",
                "dojox/validate/check",
                "dijit/form/NumberTextBox",
                "dijit/form/ValidationTextBox",
                "dijit/form/Form",
                "dojox/form/Manager",
                "dojox/charting/plot2d/Columns",
                "dojox/charting/axis2d/Default",
                "dojox/charting/widget/Legend",
                "dojox/charting/themes/MiamiNice",
                "dojox/grid/LazyTreeGrid",
                "dijit/tree/ForestStoreModel",
                "dojo/data/ItemFileWriteStore",
                "dijit/form/DateTextBox"
        ]);
        montarAlunosemAula();

    </script>
}
<div class="apresentadorMensagem" id="apresentadorMensagem" style="display:none;"></div>

<div>
    <div class="EspacoCaixa caixaPesquisa">
        <input type="hidden" id="setValuePermissoes" value="" />
        <table class="Table">
            <tr>
                <td style="width: 95%;">
                    <div data-dojo-type="dijit/TitlePane" data-dojo-props="title: 'Pesquisa'" id="panePesqGeral" open="true">
                        <table class="table" style="width:100%;">
                            <tr>
                                <td class="tdRight" style="width: 10%;">
                                    <label for="ckEscolas">Todas as Escolas:</label>
                                </td>
                                <td style="width: 40%;">
                                    <table class="Table">
                                        <tr>
                                            <td style="width: 10%;">
                                                <input type="checkbox" id="ckEscolas" name="ckEscolas" data-dojo-type="dijit/form/CheckBox" class="Check" />
                                            </td>
                                            <td class="tdRight" style="width: 8%;">
                                                <label for="cbHistorico">Movimentação:</label>
                                            </td>
                                            <td class="dojoTextBoxIECorrect" style="width: 13%;">
                                                <input id="cbHistorico" name="cbHistorico" required="false" data-dojo-type="dijit/form/FilteringSelect" style="width: 100%;">
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                            <tr>
                                <td class="tdRight" style="width:5%;">
                                    <label for="txAluno" id="lblFkAluno">Aluno:</label>
                                </td>
                                <td style="width: 45%;" class="nowrap">
                                    <input id="cdAluno" type="hidden" />
                                    <input id="cdPessoaAluno" type="hidden" />
                                    <table class="Table">
                                        <tr>
                                            <td class="dojoTextBoxIECorrect" style="width: 95%;">
                                                <input type="text" id="txAluno" name="txAluno" disabled="disabled" style="width: 100%;" data-dojo-type="dijit/form/TextBox" />
                                            </td>
                                            <td style="width: 5%; text-align: left" class="nowrap">
                                                <input id="FKAluno" style="min-width: 18px" />
                                                <input type="text" id="limparAluno" />
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <td class="tdRight" style="width:5%;">
                                    <label for="txItem" id="lblFkAluno">Livro:</label>
                                </td>
                                <td style="width: 45%;" class="nowrap">
                                    <input id="cdItem" type="hidden" />
                                    <table class="Table">
                                        <tr>
                                            <td class="dojoTextBoxIECorrect" style="width: 95%;">
                                                <input type="text" id="txItem" name="txAluno" disabled="disabled" style="width: 100%;" data-dojo-type="dijit/form/TextBox" />
                                            </td>
                                            <td style="width: 5%; text-align: left" class="nowrap">
                                                <input id="FKItem" style="min-width: 18px" />
                                                <input type="text" id="limparItem" />
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>

                        <div data-dojo-type="dijit/TitlePane" data-dojo-props="title: 'Períodos'" id="panePeriodo" open="false">
                            <table class="Table">
                                <tr>
                                    <td class="tdRight" style="width: 10%;">
                                        <label for="nome">Data Inicial:</label>
                                    </td>
                                    <td style="width: 35%;" class="dojoTextBoxIECorrect">
                                        <input type="text"
                                               id="dtInicialFat"
                                               name="dtInicialFat" class="alignDojoData"
                                               data-dojo-type="dijit.form.DateTextBox" style="width: 100%;"
                                               onkeypress="mascaraDataHora(event, this)" maxlength="10" />
                                    </td>
                                    <td class="tdRight" style="width: 10%;">
                                        <label for="nome">Data Final:</label>
                                    </td>
                                    <td style="width: 35%;" class="dojoTextBoxIECorrect">
                                        <input type="text"
                                               id="dtFinalFat"
                                               name="dtFinalFat"
                                               class="alignDojoData"
                                               data-dojo-type="dijit.form.DateTextBox" style="width: 100%;"
                                               onkeypress="mascaraDataHora(event, this)" maxlength="10" />
                                    </td>
                                    <td class="tdRight" style="width: 10%;">
                                        <label for="ckMovimento">Movimento:</label>
                                    </td>
                                    <td style="width: 40%;" rowspan="3">
                                        <input type="checkbox" id="ckMovimento" name="ckMovimento" data-dojo-type="dijit/form/CheckBox" class="Check" />
                                    </td>
                                    <td class="tdRight" style="width: 10%;">
                                        <label for="ckHistorico">Historico:</label>
                                    </td>
                                    <td style="width: 40%;" rowspan="3">
                                        <input type="checkbox" id="ckHistorico" name="ckHistorico" data-dojo-type="dijit/form/CheckBox" class="Check" />
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </td>
                <td style="width: 5%; text-align: center">
                    <input id="pesquisaAluno" title="Pesquisar" />
                </td>
            </tr>
        </table>
    </div>

    <div data-dojo-type="dijit/layout/TabContainer" id="tabContainer" onclick="selecionaTab" class="Abas" style="height: 500px; width:1200px;">

        <div data-dojo-type="dijit/layout/ContentPane" id="tgGerar" title="Notas a devolver" class="ContentPane">

            <div style="padding-top: 5px;padding-bottom:5px;">
                <div class="linha_acoes" style="width: 100%"></div>
                <table style="width: 100%" class="Alinhamento">
                    <tr style="width: 100%">
                        <td style="text-align: left; width: 25%">
                            <div class="linkAcoes" id="linkAcoes"></div>
                        </td>
                        <td style="text-align: center; width: 50%">
                            <!--input id="novaBaixaFinan" title="Novo" /-->
                            <!--input id="relatorioBaixaFinan" title="Relatório" /-->
                        </td>
                        <td style="text-align: right; width: 25%">
                            <span class="linkSelecionados" id="linkSelecionados"></span>
                        </td>
                    </tr>
                </table>
                <div class="linha_acoes" style="width: 100%"></div>
            </div>

            <div data-dojo-type="dijit/layout/ContentPane" style="padding-left: 0px; padding-right: 0px;">
                <div class="gridCadBasic" style="min-width:1000px;height:450px">
                    <div id="gridAlunosemAula"></div>
                </div>
            </div>
        </div>
        <div data-dojo-type="dijit/layout/ContentPane" id="tgGeradas" title="Notas devolvidas" class="ContentPane">
            <div style="padding-top: 5px;padding-bottom:5px;">
                @*<div class="linha_acoes" style="width: 100%"></div>
                <table style="width: 100%" class="Alinhamento">
                    <tr style="width: 100%">
                        <td style="text-align: left; width: 25%">
                            <div class="linkAcoes" id="linkAcoesN"></div>
                        </td>
                        <td style="text-align: center; width: 50%">
                        </td>
                        <td style="text-align: right; width: 25%">
                            <span class="linkSelecionados" id="linkSelecionadosN"></span>
                        </td>
                    </tr>
                </table>
                <div class="linha_acoes" style="width: 100%"></div>*@
            </div>

            <div data-dojo-type="dijit/layout/ContentPane" style="padding-left: 0px; padding-right: 0px;">
                <div class="gridCadBasic" style="min-width:1000px;height:430px">
                    <div id="gridNotasDevolvidas"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="clear"></div>
    <div id="proItem" data-dojo-type="dijit.Dialog" title="Pesquisar Item" style="display: none; width: 700px; height: 590px;">
        <div style="width: 685px;height: 590px;">
            @Html.Partial("../Financeiro/ItemFK")
        </div>
    </div>

    <div id="proAluno" data-dojo-type="dijit.Dialog" title="Pesquisar Aluno" style="display: none; width: 700px; height: 590px;">
        <div style="width: 685px;height: 590px;">
            @Html.Partial("../Secretaria/AlunoFK")
        </div>
    </div>
