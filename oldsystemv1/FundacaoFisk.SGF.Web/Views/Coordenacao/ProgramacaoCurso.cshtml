            <form data-dojo-type="dojox/form/Manager" id="formAlteraProg" data-dojo-id="formAlteraProg" enctype="multipart/form-data" class="Formulario">
			    <table class="Table">
			    	<tr>
                        <input id="cd_item_programacao" name="cd_item_programacao" type="hidden" value="0" />
