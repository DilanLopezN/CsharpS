							<td style="text-align:left; width:25%">
								<div class="linkAcoes" id="linkAcoes"></div>
							</td>
							<td style="text-align:center; width:50%;">
								<input id="novoProgramacao" title="Novo" />
								<input id="relatorioProgramacao" title="Relatório" />
							</td>
							<td style="text-align:right; width:25%">
								<span class="linkSelecionados" id="linkSelecionados"></span>
							</td>
						</tr>
					</table>
				</div>
				<div class="linha_acoes" style="width: 100%"></div>
			</div>
			<div data-dojo-type="dijit/layout/ContentPane" id="ContentGridProgramacao" style="padding-left:0px; padding-right:0px;">
				<div class="gridCadBasic" id ="paiGridProgramacao" >
					<div id="gridProgramacao"></div>
				</div>
			</div>
       </div>
</div>
 

<div id="cad" data-dojo-type="dijit.Dialog" title="Cadastro de Programação Curso" class="Dialogo">
	<div class="corpo_interno">
		<form data-dojo-type="dojox/form/Manager" id="formProgramacao" data-dojo-id="formProgramacao" enctype="multipart/form-data" class="Formulario">
			<div class="apresentadorMsg" style="display:none;" id="apresentadorMensagemProgramacao"></div>
            <table class="Table">
				<tr>
					<td class="tdRight" style="width:20%" for="cursoAtivo">Curso:</td>
					<td style="width:30%" class="dojoTextBoxIECorrect">
						<input data-dojo-type="dijit/form/FilteringSelect" style="width: 100%;" id ="cursoAtivo" name="cursoAtivo"/>
					</td>
					<td  class="tdRight" style="width:20%" for="duracaoAtiva">Carga Horária:</td>
					<td style="width:30%" class="dojoTextBoxIECorrect">
						<input data-dojo-type="dijit/form/FilteringSelect" style="width: 100%;" id="duracaoAtiva" name="duracaoAtiva"/>
					</td>
				</tr>
			</table>
            <div class="CaixaAcao">
			<div class="linha_acoes" style="width: 100%"></div>
			<div>
				<table style="width:100%">
					<tr style="width:100%">
						<td style="text-align:left; width:25%">
                             <div class="linkAcoes" id="linkAcoesProg"></div>
						</td>
						<td style="text-align:center; width:50%;">
							<input id="incluirProgGrid" />
                            @*<input id="alterarProgGrid"/>*@
                            @*<input id="deleteProgGrid"  title="Apagar" />*@
						</td>
						<td style="text-align:right; width:25%">
						</td>
					</tr>
				</table>
                </div>
			</div>
			<div class="linha_acoes" style="width: 100%"></div>
			<div class="gridOrdem">
               @*<div data-dojo-type="dijit/layout/ContentPane" id="ContentGridCursoAval" style="width:100%; height:100%; padding-left:0px; padding-right:0px;">*@
                   <div id="gridProg" style="height:100%;"></div>
               @*</div>*@
            </div>
			<br />
			<div class="CaixaAcao">
				<div class="linha_acoes" style="width: 100%"></div>
				<div class="Alinhamento">
                    <span id="divProgCima">
                        <input type="button" id="subir" title="Subir" style="width: 60px" /></span>
                    <span id="divProgBaixo">
                        <input type="button" id="descer" title="Descer" style="width: 60px" /></span>
					<span id="divIncluirProgramacao">
						<input id="incluirProgramacao" title="incluir" /></span>
					@*<span id="divAlterarProgramacao">
						<input id="alterarProgramacao" title="Alterar" /></span>*@
					@*<span id="divExcluirProgramacao">
						<input type="button" id="deleteProgramacao" title="Apagar" /></span>*@
					<span id="divLimparProgramacao">
						<input id="limparProgramacao" title="Limpar" /></span>
					<span id="divCancelarProgramacao">
						<input type="button" id="cancelarProgramacao" title="Cancelar" /></span>
					<span id="divFecharProgramacao">
						<input type="button" id="fecharProgramacao" title="Fechar" /></span>
				</div>
				<div  class="linha_acoes" style="width: 100%"></div>
			</div>
       </form>
   </div>


   <div id="dialogGridProg" data-dojo-type="dijit/Dialog" class="Dialogo" title="Aula" style="width: 700px;">
