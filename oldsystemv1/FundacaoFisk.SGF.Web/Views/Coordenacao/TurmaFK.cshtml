<div class="corpo_interno">
    <div class="EspacoCaixa caixaPesquisa">
        <table class="Table">
            <tr>
                <td class="tdRight" style="width: 7%;">
                    <label for="nomTurmaFK">Nome:</label>
                </td>
                <td style="width: 27%;" class="dojoTextBoxIECorrect">
                    <input type="text" id="nomTurmaFK" name="_nomTurma" style="width: 100%;" data-dojo-type="dijit/form/TextBox" required="required" />
                </td>
                <td class="tdRight" style="width: 7%;">
                    <label for="inicioTrumaFK">Apelido:</label>
                </td>
                <td style="width: 27%;">
                    <table class="Table">
