@{
    ViewBag.Title = "Relatório de Atividade Extra";
    Layout = "~/Views/Shared/_layout.cshtml";
}

@section head {
    <link href="~/Content/themes/base/dojo1.8.5r/dojox/form/resources/CheckedMultiSelect.css" rel="stylesheet" />
}

@section scripts {

    @Scripts.Render("~/bundles/reportAtividadeExtra")
    
    @Scripts.Render("~/bundles/alunoFK")
    @Scripts.Render("~/bundles/pessoaRelFK")
    <script src="~/Scripts/jquery.maskedinput-1.3.js"></script>
}

@section scriptsBody{
    <script type="text/javascript">
       
        document.getElementById("labelTitulos").innerHTML = "Atividade Extra";

        //**** Requerires para a Tabulação ****\\
        require([
                "dojo",
                "dijit/form/NumberTextBox",
                "dijit/form/ValidationTextBox",
                "dijit/form/FilteringSelect",
                "dijit/form/TimeTextBox",
                "dojo/data/ObjectStore",
                "dijit/form/DateTextBox",
                "dijit/Dialog",
                "dojo/parser"
        ]);
        montarMetodosRelatorioAtividadeExtra();
    </script>
}
<div class="apresentadorMensagem" id="apresentadorMensagem" style="display:none;"></div>
<script type="text/javascript">
    showCarregando();
</script>
<div>
    <div class="EspacoCaixa caixaPesquisa">
        <table class="Table">
            <tr>
                <td>
                    <div data-dojo-type="dijit/TitlePane" data-dojo-props="title: 'Filtros'" id="panePesqGeral" open="true">
                        <table class="Table">
                            <tr>
							    <td class="CorpoFormAux AlinhaDireita" style="width: 15%;">
								    <label>Tipo Atividade:</label></td>
							    <td>
								    <table class="Table">
									    <tr>
										    <td class="dojoTextBoxIECorrect" style="width: 40%;">
											    <select id="pesTipo" name="pesTipo" data-dojo-type="dijit/form/FilteringSelect" required="false" style="width: 100%;"></select>
										    </td>
										    <td class="tdRight nowrap" style="width: 10%;">
											    <label name="labelProduto">Produto:</label>
										    </td>
										    <td class="dojoTextBoxIECorrect" style="width: 40%;">
											    <select id="pesProduto" name="pesProduto" data-dojo-type="dijit/form/FilteringSelect" required="false" style="width: 100%;"></select>
										    </td>
									    </tr>
								    </table>
							    </td>
							     <td class="tdRight" style="width: 10%;">
                                    <label>Curso:</label>
                                 </td>
                                 <td class="dojoTextBoxIECorrect" style="width: 20%;">
                                     <select id="pesCurso" name="pesCurso" data-dojo-type="dijit/form/FilteringSelect" required="false" style="width: 100%;"></select>
                                 </td>
						    </tr>
                            <tr>
								<td class="tdRight" style="width: 10%;">
                                    <label>Aluno:</label>
                                </td>
                                <td class="dojoTextBoxIECorrect" style="width: 40%;">
                                    <table class="Table">
                                        <tr>
                                            <td class="dojoTextBoxIECorrect" style="width: 95%;">
                                                <input type="hidden" id="cdAlunoPesq" value="0" />
                                                <input id="noAluno" name="noAluno" size="125" style="width: 100%;" required="true" data-dojo-type="dijit/form/ValidationTextBox" disabled="disabled" />
                                            </td>
                                            <td style="width: 5%; text-align: left" class="nowrap">
                                                <input id="pesAluno" style="min-width: 18px" style="width: 100%;" />
                                                <input type="text" id="limparAluno" />
                                            </td>
                                        </tr>
                                    </table>
                                </td>
								<td class="tdRight" style="width: 10%;">
                                    <label>Responsável:</label>
                                </td>
                                <td class="dojoTextBoxIECorrect" style="width: 35%;">
                                    <input id="cd_funcionario" type="hidden" />
                                    <input id="cd_pessoa_funcionario" type="hidden" />
                                    <table class="Table">
                                        <tr>
                                            <td class="dojoTextBoxIECorrect" style="width: 95%;">
                                                <input id="noFuncionario" name="noFuncionario" size="125" style="width: 100%;" required="true" data-dojo-type="dijit/form/ValidationTextBox" disabled="disabled" />
                                            </td>
                                            <td style="width: 5%; text-align: left" class="nowrap">
                                                <input id="pesFuncionario" style="min-width: 18px" style="width: 100%;" />
                                                <input type="text" id="limparPesFuncionario" />
                                            </td>
                                        </tr>
                                    </table>
                                </td>
							</tr>
                            <tr>
                                @*<td class="tdRight nowrap" style="width: 10%;">
									<label for="ckParticipacao" name="lackParticipacao">Participou:</label>
								</td>
                                <td style="width: 1%; text-align: left">
                                    <input type="checkbox" id="ckParticipacao" data-dojo-type="dijit/form/CheckBox" class="Check" style="text-align: right" /></td>*@
                                
                                <td class="tdRight" style="width: 15%;">
                                    <label>Participou:</label>
                                </td>
                                <td class="dojoTextBoxIECorrect" style="width: 40%;">
                                    <table>
                                        <tr>
                                            <td class="dojoTextBoxIECorrect" style="width: 30%;">
                                                <select id="pesParticipacao" name="pesParticipacao" data-dojo-type="dijit/form/FilteringSelect" required="true" style="width: 50%;"></select>
                                            </td>
                                			<td class="tdRight nowrap" style="width: 10%;">
											    <label>Lançada:</label>
										    </td>
										    <td class="dojoTextBoxIECorrect" style="width: 40%;">
											    <select id="cbLancada" name="cbLancada" data-dojo-type="dijit/form/FilteringSelect" required="false" style="width: 100%;"></select>
										    </td>
                                        </tr>
                                    </table>
                                </td>

                                <td class="tdRight nowrap" style="width: 10%;">
									<label for="ckObsAtividade" name="lackObsAtividade">Esconder Obs.Atividade:</label>
								</td>
								<td style="width: 1%; text-align: left">
									<input type="checkbox" id="ckObsAtividade" data-dojo-type="dijit/form/CheckBox" class="Check" style="text-align: right" /></td>
                            </tr>
                            
                        </table>
                        <div data-dojo-type="dijit/TitlePane" data-dojo-props="title: 'Período da Data de Atividade Extra'" id="paneDataInicial" open="true">
							<table class="Table">
								<tr>
									<td class="tdRight" style="width: 15%;">
										<label for="dtInicial">Data Inicial:</label>
									</td>
									<td style="width: 35%;" class="dojoTextBoxIECorrect">
										<input type="text" id="dtInicial" name="dtInicial" class="alignDojoData" required="required" data-dojo-type="dijit.form.DateTextBox" onkeypress="mascaraDataHora(event, this)" style="width: 100%;" />
									</td>
									<td class="tdRight" style="width: 15%;">
										<label for="dtFinal">Data Final:</label>
									</td>
									<td style="width: 35%;" class="dojoTextBoxIECorrect">
										<input type="text" id="dtFinal" name="dtFinal" class="alignDojoData" required="required" data-dojo-type="dijit.form.DateTextBox" onkeypress="mascaraDataHora(event, this)" style="width: 100%;" />
									</td>
								</tr>
							</table>
						</div>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>

<div style="padding-top: 10px">
    <div class="linha_acoes" style="width: 100%"></div>
    <table style="width: 100%" class="Alinhamento">
        <tr style="width: 100%">
            <td style="text-align: center; width: 50%">
                <input type="button" id="relatorioAtividadeExtra" title="Relatório" />
            </td>
        </tr>
    </table>
    <div class="linha_acoes" style="width: 100%"></div>
</div>

<div id="proPessoaRel" data-dojo-type="dijit.Dialog" title="Pesquisar Responsável" style="display: none; width: 800px; height: 590px;">
    <div style="width: 785px; height: 590px;">
        @Html.Partial("../Pessoa/ProfessorFK")
    </div>
</div>
<div id="proAluno" data-dojo-type="dijit.Dialog" title="Pesquisar Aluno" style="display: none; width: 700px; height: 590px;">
    <div style="width: 685px; height: 590px;">
        @Html.Partial("../Secretaria/AlunoFK")
    </div>
</div>

