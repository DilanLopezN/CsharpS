@{
    ViewBag.Title = "Relatório de Prospect";
    Layout = "~/Views/Shared/_layout.cshtml";
}

@section head {
    <link href="~/Content/themes/base/dojo1.8.5r/dojox/form/resources/CheckedMultiSelect.css" rel="stylesheet" />
}

@section scripts {
    @Scripts.Render("~/bundles/reportProspect")
    <script src="~/Scripts/jquery.maskedinput-1.3.js"></script>
}

@section scriptsBody{
    <script type="text/javascript">
        document.getElementById("labelTitulos").innerHTML = "Prospect";
        
        //**** Requerires para a Tabulação ****\\
        require([
                "dojo",
                "dijit/form/NumberTextBox",
                "dijit/form/ValidationTextBox",
                "dijit/form/FilteringSelect",
                "dijit/form/TimeTextBox",
                "dojo/data/ObjectStore",
                "dijit/form/DateTextBox",
                "dijit/Dialog",
                "dojo/parser"
        ]);
        montarMetodosRelatorioProspect();
    </script>
}
<div class="apresentadorMensagem" id="apresentadorMensagem" style="display:none;"></div>
<script type="text/javascript">
    showCarregando();
</script>
<div>
    <div class="EspacoCaixa caixaPesquisa">
        <table class="Table">
            <tr>
                <td>
                    <div data-dojo-type="dijit/TitlePane" data-dojo-props="title: 'Filtros'" id="panePesqGeral" open="true">
                        <table class="Table">
                            <tr>
                                <td class="tdRight" style="width: 15%;">
                                    <label>Tipo de Relatório:</label>
                                </td>
                                <td class="dojoTextBoxIECorrect" style="width: 35%;">
                                    <select id="pesRelatorio" name="pesRelatorio" data-dojo-type="dijit/form/FilteringSelect" required="true" style="width: 100%;"></select>
                                </td>

                                <td class="tdRight" style="width: 15%;">
                                    <label>Funcionário:</label>
                                </td>
                                <td class="dojoTextBoxIECorrect" style="width: 35%;">
                                    <input id="cd_funcionario" type="hidden" />
                                    <input id="cd_pessoa_funcionario" type="hidden" />
                                    <table class="Table">
                                        <tr>
                                            <td class="dojoTextBoxIECorrect" style="width: 95%;">
                                                <input id="noFuncionario" name="noFuncionario" size="125" style="width: 100%;" required="true" data-dojo-type="dijit/form/ValidationTextBox" disabled="disabled" />
                                            </td>
                                            <td style="width: 5%; text-align: left" class="nowrap">
                                                <input id="pesFuncionario" style="min-width: 18px" style="width: 100%;" />
                                                <input type="text" id="limparPesFuncionario" />
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                            <tr>
                                <td class="tdRight" style="width: 15%;">
                                    <label>Motivo Não Matrícula:</label>
                                </td>
                                <td class="dojoTextBoxIECorrect" style="width: 35%;">
                                    <select id="mtNnaoMatricula" name="mtNãoMatricula" data-dojo-type="dijit/form/FilteringSelect" required="false" style="width: 60%;"></select>
                                </td>
                                <td class="tdRight" style="width: 15%;">
                                    <label>Produto:</label>
                                </td>
                                <td class="dojoTextBoxIECorrect" style="width: 35%;">
                                    <select id="pesProduto" name="pesProduto" data-dojo-type="dijit/form/FilteringSelect" required="false" style="width: 50%;"></select>
                                </td>
                            </tr>
                            <tr>
                                <td class="tdRight" style="width: 15%;">
                                    <label for="compComoConheceu">Como Conheceu:</label>
                                </td>
                                <td class="dojoTextBoxIECorrect" style="width: 35%;">
                                    <input id="compComoConheceu" data-dojo-type="dijit/form/FilteringSelect" required="required" name="compComoConheceu" size="61" style="width: 60%;" />
                                </td>
                                <td class="tdRight" style="width: 15%">
                                    <label id="laPeriodo">Período:</label>
                                </td>
                                <td style="width: 35%;" class="dojoTextBoxIECorrect">
                                    <select
                                        id="cbPeriodo"
                                        data-dojo-id="cbPeriodo"
                                        data-dojo-props='dropDown:true'
                                        name="cbPeriodo"
                                        multiple="true"
                                        style="width:50%"
                                        data-dojo-type="dojox/form/CheckedMultiSelect" style="width: 100%;" required="false">
                                    </select>
                                </td>

                            </tr>
                            <tr>
                                <td class="tdRight" style="width: 15%;">Faixa Etária:</td>
                                <td class="dojoTextBoxIECorrect" style="width: 35%;">
                                    <select id="idFaixaEtaria" required="false" name="idFaixaEtaria" data-dojo-type="dijit/form/FilteringSelect" style="width: 60%;"></select>
                                </td>                               
                            </tr>
                        </table>
                        <div data-dojo-type="dijit/TitlePane" data-dojo-props="title: 'Período do Cadastro'" id="paneDataInicial" open="true">
                            <form name="formPesquisaRelatorioProspect" id="formPesquisaRelatorioProspect" data-dojo-type="dojox/form/Manager" style="width: 100%">
                                <table class="Table">
                                    <tr>
                                        <td class="tdRight" style="width: 15%;">
                                            <label for="nome">Data Inicial:</label>
                                        </td>
                                        <td style="width: 35%;" class="dojoTextBoxIECorrect">
                                            <input type="text" id="dtInicial" name="dtInicial" class="alignDojoData" required="required" data-dojo-type="dijit.form.DateTextBox" onkeypress="mascaraDataHora(event, this)" style="width: 100%;" />
                                        </td>
                                        <td class="tdRight" style="width: 15%;">
                                            <label for="nome">Data Final:</label>
                                        </td>
                                        <td style="width: 35%;" class="dojoTextBoxIECorrect">
                                            <input type="text" id="dtFinal" name="dtFinal" class="alignDojoData" required="required" data-dojo-type="dijit.form.DateTextBox" onkeypress="mascaraDataHora(event, this)" style="width: 100%;" />
                                        </td>
                                    </tr>
                                    <tr id="trCompDta">
                                        <td class="tdRight" style="width: 15%;">
                                            <label for="nome">Data Inicial:</label>
                                        </td>
                                        <td style="width: 35%;" class="dojoTextBoxIECorrect">
                                            <input type="text" id="dtInicialComp" name="dtInicialComp" class="alignDojoData" data-dojo-type="dijit.form.DateTextBox" onkeypress="mascaraDataHora(event, this)" style="width: 100%;" />
                                        </td>
                                        <td class="tdRight" style="width: 15%;">
                                            <label for="nome">Data Final:</label>
                                        </td>
                                        <td style="width: 35%;" class="dojoTextBoxIECorrect">
                                            <input type="text" id="dtFinalComp" name="dtFinalComp" class="alignDojoData" data-dojo-type="dijit.form.DateTextBox" onkeypress="mascaraDataHora(event, this)" style="width: 100%;" />
                                        </td>
                                    </tr>
                                </table>
                            </form>
                        </div>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>

<div style="padding-top: 10px">
    <div class="linha_acoes" style="width: 100%"></div>
    <table style="width: 100%" class="Alinhamento">
        <tr style="width: 100%">
            <td style="text-align: center; width: 50%">
                <input type="button" id="relatorioProspect" title="Relatório" />
            </td>
        </tr>
    </table>
    <div class="linha_acoes" style="width: 100%"></div>
</div>

<div id="proProfessor" data-dojo-type="dijit.Dialog" title="Pesquisar Professor" style="display: none; width: 700px; height: 590px;">
    <div style="width: 685px;height: 590px;">
        @Html.Partial("../Pessoa/ProfessorFK")
    </div>
</div>