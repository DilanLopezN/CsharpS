@{
    ViewBag.Title = "Relatório de Controle de Sala";
    Layout = "~/Views/Shared/_layout.cshtml";
}

@section scriptsBody{
    <script src="~/Scripts/jquery.maskedinput-1.3.js"></script>
    @Scripts.Render("~/bundles/reportControleSala")
    @Scripts.Render("~/bundles/turmaFK")
    @Scripts.Render("~/bundles/alunoFK")
    <script type="text/javascript">
        document.getElementById("labelTitulos").innerHTML = "Controle de Salas";

        //**** Requerires para a Tabulação ****\\
        require([
                "dojo",
                "dijit/form/TextBox",
                "dijit/Dialog",
                "dojox/validate/check",
                "dijit/form/ValidationTextBox",
                "dijit/form/Form", "dojox/form/Manager",
                "dijit/form/NumberTextBox",
                "dijit/form/FilteringSelect",
                "dijit/form/TimeTextBox",
                "dojo/data/ObjectStore",
                "dijit/form/DateTextBox",
                "dijit/Dialog",
                "dojo/parser"
        ]);
        montarMetodosRelatorioControleSala();
    </script>
}
<div class="apresentadorMensagem" id="apresentadorMensagem" style="display:none;"></div>
<script type="text/javascript">
    showCarregando();
</script>

<div>
    <div class="EspacoCaixa caixaPesquisa">
            <table class="Table">
                <tr>
                    <td style="width: 100%;">
                        <div data-dojo-type="dijit/TitlePane" data-dojo-props="title: 'Filtros'" id="panePesqGeral" open="true">
                            <table class="Table">
                                <tr>
                                    <td class="tdRight" style="width: 10%;">
                                        <label>Professor:</label>
                                    </td>
                                    <td class="dojoTextBoxIECorrect" style="width: 35%;">
                                        <select id="pesqProf" name="pesqProf" required="false" data-dojo-type="dijit/form/FilteringSelect" style="width: 100%;"></select>
                                    </td>
                                    <td class="tdRight" style="width: 10%;">
                                        <label>Turma:</label>
                                    </td>
                                    <td class="dojoTextBoxIECorrect" style="width: 45%;">
                                        <input type="hidden" id="cd_turma" />
                                        <table class="Table">
                                            <tr>
                                                <td class="dojoTextBoxIECorrect" style="width: 95%;">
                                                    <input id="noTurma" name="noTurma" size="125" style="width: 100%;" required="false" data-dojo-type="dijit/form/ValidationTextBox" disabled="disabled" />
                                                </td>
                                                <td style="width: 5%; text-align: left" class="nowrap">
                                                    <input id="pesTurmaFK" style="min-width: 18px" style="width: 100%;" />
                                                    <input type="text" id="limparPesTurmaFK" />
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="tdRight" style="width: 10%;">
                                        <label for="cbSala">Sala:</label>
                                    </td>
                                    <td class="dojoTextBoxIECorrect" style="width: 35%;">
                                        <select id="pesqSala" name="pesqSala" required="false" data-dojo-type="dijit/form/FilteringSelect" style="width: 60%;"></select>
                                    </td>
                                    <td class="tdRight" style="width: 10%;">
                                        <label>Horário:</label>
                                    </td>
                                    <td class="dojoTextBoxIECorrect" style="width: 45%;">
                                        <input type="text" name="hIni" id="hIni"
                                            data-dojo-type="dijit/form/TimeTextBox"
                                            data-dojo-props="constraints: {clickableIncrement: 'T00:05', visibleIncrement: 'T00:30', formatLength:'short'}" required="false" />
                                        <label for="timeFim">Até:</label>
                                        <input type="text" name="hFim" id="hFim"
                                            data-dojo-type="dijit/form/TimeTextBox"
                                            data-dojo-props="constraints: {clickableIncrement: 'T00:05', visibleIncrement: 'T00:30', formatLength:'short'}" required="false" />
                                    </td>
                                </tr>
                                <tr>
                                    <td class="tdRight" style="width: 10%;">
                                        <label id="label2">Dias:</label>
                                    </td>
                                    <td class="dojoTextBoxIECorrect" style="width: 35%;">
                                        <table class="Table" style="width: 100%; margin-top: 5px;">
                                            <tr>
                                                <td style="width: 4%" class="tdLeft">
													<label>Dom</label>
													<input name="idDomingo" type="checkbox" id="idDomingo" data-dojo-type="dijit/form/CheckBox" />
												</td>
												<td style="width: 1%">
																					
												</td>
												<td style="width: 4%" class="tdLeft">
													<label>Seg</label>
													<input name="idSeg" type="checkbox" id="idSeg" data-dojo-type="dijit/form/CheckBox" />
												</td>
												<td style="width: 1%">
																					
												</td>
												<td style="width: 4%" class="tdLeft">
													<label>Ter</label>
													<input name="idTer" type="checkbox" id="idTer" data-dojo-type="dijit/form/CheckBox" />
												</td>
												<td style="width: 1%">
																					
												</td>
												<td style="width: 4%" class="tdLeft">
													<label>Qua</label>
													<input name="idQuarta" type="checkbox" id="idQuarta" data-dojo-type="dijit/form/CheckBox" />
												</td>
												<td style="width: 1%">
																					
												</td>
												<td style="width: 4%" class="tdLeft">
													<label>Qui</label>
													<input name="idQuinta" type="checkbox" id="idQuinta" data-dojo-type="dijit/form/CheckBox" />
												</td>
												<td style="width: 1%">
																					
												</td>
												<td style="width: 4%" class="tdLeft">
													<label>Sex</label>
													<input name="idSexta" type="checkbox" id="idSexta" data-dojo-type="dijit/form/CheckBox" />
												</td>																				
												<td style="width: 1%">
																					
												</td>
												<td style="width: 4%" class="tdLeft">
													<label>Sáb</label>
													<input name="idSabado" type="checkbox" id="idSabado" data-dojo-type="dijit/form/CheckBox" />
												</td>																				
												<td style="width: 1%">
																					
												</td>

                                                
                                            </tr>
                                        </table>
                                    </td>
                                    <td colspan="2"></td>
                                </tr>
                            </table>
                        </div>
                    </td>
                </tr>
            </table>
    </div>
</div>

<div style="padding-top: 10px">
    <div class="linha_acoes" style="width: 100%"></div>
    <table style="width: 100%" class="Alinhamento">
        <tr style="width: 100%">
            <td style="text-align: center; width: 50%">
                <input type="button" id="relatorioControleSala" title="Relatório" />
            </td>
        </tr>
    </table>
    <div class="linha_acoes" style="width: 100%"></div>
</div>

<div id="proTurmaFK" data-dojo-type="dijit.Dialog" title="Pesquisar Turma" style="display: none; width: 800px; height: 590px;">
   <input id="apresentadorMensagemFks" type="hidden">
   <div class="apresentadorMsg" id="apresentadorMensagemTurmaFK" style="display: none;"></div>
   <div style="height:590px;width:780px">
        @Html.Partial("../Coordenacao/TurmaFK")
    </div>
</div>

<div id="proAluno" data-dojo-type="dijit.Dialog" title="Pesquisar Aluno" style="display: none; width: 700px; height: 590px;">
    <div style="width: 685px;height: 590px;">
        @Html.Partial("../Secretaria/AlunoFK")
    </div>
</div>