@{
    ViewBag.Title = "Relatório de Histórico do Aluno";
    Layout = "~/Views/Shared/_layout.cshtml";
}

@section head {
    <link href="~/Content/themes/base/dojo1.8.5r/dojox/form/resources/CheckedMultiSelect.css" rel="stylesheet" />
}

@section scripts {

    @Scripts.Render("~/bundles/reportHistoricoAluno")
    
    @Scripts.Render("~/bundles/alunoFK")
    <script src="~/Scripts/jquery.maskedinput-1.3.js"></script>
}

@section scriptsBody{
    <script type="text/javascript">
       
        document.getElementById("labelTitulos").innerHTML = "Relatório de Histórico do Aluno";

        //**** Requerires para a Tabulação ****\\
        require([
                "dojo",
                "dijit/form/NumberTextBox",
                "dijit/form/ValidationTextBox",
                "dijit/form/FilteringSelect",
                "dijit/form/TimeTextBox",
                "dojo/data/ObjectStore",
                "dijit/form/DateTextBox",
                "dijit/Dialog",
                "dojo/parser"
        ]);
        montarMetodosRelatorioHistoricoAluno();
    </script>
}
<div class="apresentadorMensagem" id="apresentadorMensagem" style="display:none;"></div>
<script type="text/javascript">
    showCarregando();
</script>
<div>
    <div class="EspacoCaixa caixaPesquisa">
        <table class="Table">
            <tr>
                <td>
                    <div data-dojo-type="dijit/TitlePane" data-dojo-props="title: 'Filtros'" id="panePesqGeral" open="true">
                        <table class="Table">
                            
                            <tr>
                                <td class="tdRight" style="width: 10%;">
                                    <label>Aluno:</label>
                                </td>
                                <td class="dojoTextBoxIECorrect" style="width: 40%;">
                                    <table class="Table">
                                        <tr>
                                            <td class="dojoTextBoxIECorrect" style="width: 95%;">
                                                <input type="hidden" id="cdAlunoPesq" value="0" />
                                                <input id="noAluno" name="noAluno" size="125" style="width: 100%;" required="required" data-dojo-type="dijit/form/ValidationTextBox" disabled="disabled" />
                                            </td>
                                            <td style="width: 5%; text-align: left" class="nowrap">
                                                <input id="pesAluno" style="min-width: 18px" style="width: 100%;" />
                                                <input type="text" id="limparAluno" />
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <td class="tdRight nowrap" style="width: 20%;">
                                    <label for="cbHistorico" >Histórico do Aluno:</label>
                                </td>
                                <td class="alignDojoData" style="width: 55%;">
                                    <select
                                        id="cbHistorico"
                                        data-dojo-id="cbHistorico"
                                        data-dojo-props='dropDown:true'
                                        name="cbHistorico"
                                        multiple="multiple"
                                        onAfterAddOptionItem="setoptions"
                                        data-dojo-type="dojox/form/CheckedMultiSelect" style="width: 50%" >
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                
                                <td class="tdRight nowrap" style="width: 20%;" id="tdLblProf">
                                    <label>Turmas e Avaliações:</label>
                                </td>
                                <td style="width:20%;">
                                    <select
                                        id="cbAvaliacao"
                                        data-dojo-id="cbAvaliacao"
                                        data-dojo-props='dropDown:true'
                                        name="cbAvaliacao"
                                        multiple="multiple"
                                        onAfterAddOptionItem="setoptions"
                                        data-dojo-type="dojox/form/CheckedMultiSelect" style="width: 40%;" >
                                    </select>
                                </td>
                                <td class="tdRight nowrap" style="width: 20%;">
                                    <label for="noPessoaRelPos" >Titulos:</label>
                                </td>
                                <td class="alignDojoData" style="width: 55%;">
                                    <select
                                        id="cbTitulos"
                                        data-dojo-id="cbTitulos"
                                        data-dojo-props='dropDown:true'
                                        name="cbTitulos"
                                        multiple="multiple"
                                        onAfterAddOptionItem="setoptions"
                                        data-dojo-type="dojox/form/CheckedMultiSelect" style="width: 50%;" >
                                    </select>
                                </td>
                            </tr>
                            
                        </table>
                        <div data-dojo-type="dijit/TitlePane" data-dojo-props="title: 'Diversos'" id="tgDiversos" open="true">
                            <table class="Table">
                                <tr class="nowrap">
                                    <td class="tdRight" style="width: 15%;">
                                        <label>Estagio:</label>
                                    </td>
                                    <td style="width: 1%; text-align: right">
                                        <input type="checkbox" id="ckEstagio" data-dojo-type="dijit/form/CheckBox" class="Check" style="text-align: right"
                                               onclick="toglleTpAvalEstagio(this.checked);" />
                                    </td>
                                    <td class="tdRight" style="width: 15%;">
                                        <label>Atividades Extras:</label>
                                    </td>
                                    <td style="width: 1%; text-align: right">
                                        <input type="checkbox" id="ckAtividade" data-dojo-type="dijit/form/CheckBox" class="Check" style="text-align: right" />
                                    </td>
                                    <td class="tdRight" style="width: 15%;">
                                        <label>Observação:</label>
                                    </td>
                                    <td style="width: 1%; text-align: right">
                                        <input type="checkbox" id="ckObs" data-dojo-type="dijit/form/CheckBox" class="Check" style="text-align: right" />
                                    </td>
                                    <td class="tdRight" style="width: 15%;">
                                        <label>Follow-up:</label>
                                    </td>
                                    <td style="width: 1%; text-align: right">
                                        <input type="checkbox" id="ckFollow" data-dojo-type="dijit/form/CheckBox" class="Check" style="text-align: right" />
                                    </td>
                                    <td class="tdRight" style="width: 15%;">
                                        <label>Itens:</label>
                                    </td>
                                    <td style="width: 1%; text-align: right">
                                        <input type="checkbox" id="ckItem" data-dojo-type="dijit/form/CheckBox" class="Check" style="text-align: right" />
                                    </td>
                                </tr>
                            </table>
                            <div data-dojo-type="dijit/TitlePane" data-dojo-props="title: 'Estágio Avaliações'" id="trAvalEstagio" style="display:none;" open="true">
                                <table class="Table">
                                    <tr class="nowrap">
                                        <td class="tdRight nowrap" style="width: 2%;" id="td1">
                                            <label>Estágio Avaliações:</label>
                                        </td>
                                        <td style="width:20%;">
                                            <select id="cbAvalEstagio"
                                                    data-dojo-id="cbAvalEstagio"
                                                    data-dojo-props='dropDown:true'
                                                    name="cbAvalEstagio"
                                                    multiple="multiple"
                                                    onAfterAddOptionItem="setoptions"
                                                    data-dojo-type="dojox/form/CheckedMultiSelect" style="width: 20%;"></select>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>

<div style="padding-top: 10px">
    <div class="linha_acoes" style="width: 100%"></div>
    <table style="width: 100%" class="Alinhamento">
        <tr style="width: 100%">
            <td style="text-align: center; width: 50%">
                <input type="button" id="relatorioHistoricoAluno" title="Relatório" />
            </td>
        </tr>
    </table>
    <div class="linha_acoes" style="width: 100%"></div>
</div>
<div id="proAluno" data-dojo-type="dijit.Dialog" title="Pesquisar Aluno" style="display: none; width: 700px; height: 590px;">
    <div style="width: 685px; height: 590px;">
        @Html.Partial("../Secretaria/AlunoFK")
    </div>
</div>

