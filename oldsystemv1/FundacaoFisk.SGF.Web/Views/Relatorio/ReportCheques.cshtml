@{
    ViewBag.Title = "Relatório de Cheques";
    Layout = "~/Views/Shared/_layout.cshtml";
}

@section scriptsBody{
    <script src="~/Scripts/jquery.maskedinput-1.3.js"></script>
    @Scripts.Render("~/bundles/reportCheques")
    @Scripts.Render("~/bundles/alunoFK")
    <script type="text/javascript">
        document.getElementById("labelTitulos").innerHTML = "Relatório de Cheques";

        //**** Requerires para a Tabulação ****\\
        require([
                "dojo",
                "dijit/form/NumberTextBox",
                "dijit/form/ValidationTextBox",
                "dijit/form/FilteringSelect",
                "dijit/form/TimeTextBox",
                "dojo/data/ObjectStore",
                "dijit/form/DateTextBox",
                "dijit/Dialog",
                "dojo/parser"
        ]);
        montarMetodosRelatorioCheques();
    </script>
}
<div class="apresentadorMensagem" id="apresentadorMensagem" style="display: none;"></div>
<script type="text/javascript">
    showCarregando();
</script>
<div>
    <div class="EspacoCaixa caixaPesquisa">
        <table class="Table">
            <tr>
                <td style="width: 95%;">
                    <div data-dojo-type="dijit/TitlePane" data-dojo-props="title: 'Filtros'" id="panePesqGeral" open="true">
                        <table class="Table">
                            <tr>
                                <td class="tdRight" style="width: 10%;">
                                    <label for="noAluno" id="lblAluno">Aluno:</label>
                                </td>
                                <td class="dojoTextBoxIECorrect" style="width: 40%;">
                                    <input type="hidden" id="cd_aluno" />
                                    <table class="Table">
                                        <tr>
                                            <td class="dojoTextBoxIECorrect" style="width: 95%;">
                                                <input id="noAluno" name="noAluno" size="125" style="width: 100%;"  data-dojo-type="dijit/form/ValidationTextBox" disabled="disabled" />
                                            </td>
                                            <td style="width: 5%; text-align: left" class="nowrap">
                                                <input id="pesAluno" style="min-width: 18px" style="width: 100%;" />
                                                <input type="text" id="limparAlunoFK" />
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <td class="tdRight" style="width: 10%;">
                                    <label>Banco:</label>
                                </td>
                                <td class="dojoTextBoxIECorrect" style="width: 40%;">
                                    <input id="bancos" name="bancos" size="125" style="width: 100%;" data-dojo-type="dijit/form/FilteringSelect" />
                                </td>
                            </tr>
                            <tr>
                                <td class="tdRight" style="width: 10%;">
                                    <label>Emitente:</label>
                                </td>
                                <td class="dojoTextBoxIECorrect" style="width: 40%;">
                                    <input id="emitente" name="emitente" size="125" style="width: 100%;" data-dojo-type="dijit/form/ValidationTextBox" />
                                </td>
                                <td class="tdRight nowrap" style="width: 10%;">
                                    <label for="ckLiquidadados">Liquidados:</label>
                                </td>
                                <td class="dojoTextBoxIECorrect" style="width: 40%;">
                                    <table class="Table">
                                        <tr>
                                            <td class="dojoTextBoxIECorrect" style="width: 5%;">
                                                <input type="checkbox" id="ckLiquidadados" name="ckLiquidadados" data-dojo-type="dijit/form/CheckBox" class="Check" required="required" />
                                            </td>
                                            <td class="tdRight" style="width: 35%;">
                                                <label for="nm_cheque">Número do Cheque:</label>
                                            </td>
                                            <td class="dojoTextBoxIECorrect" style="width: 25%;">
                                                <input id="nm_cheque" name="nm_cheque"  data-dojo-type="dijit/form/TextBox" />
                                            </td>
                                            <td class="tdRight nowrap" style="width: 15%;">
                                                <label>Valor:</label>
                                            </td>
                                            <td  style="width: 20%;">
                                                <input id="vl_cheque" 
                                                    name="vl_cheque"
                                                    style="width: 100%;" 
                                                    data-dojo-type="dijit/form/NumberTextBox"
                                                    data-dojo-props="smallDelta:1, constraints:{min:0, pattern:'##.00'}"
                                                    onkeypress="mascaraFloat(document.getElementById('vl_cheque'));" />
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                            <tr>
                                <td class="tdRight" style="width: 10%;">
                                    <label>Agência:</label>
                                </td>
                                <td style="width: 40%;">
                                    <table class="Table">
                                        <tr>
                                            <td class="dojoTextBoxIECorrect" style="width: 45%;">
                                                <input id="nmAgencia" name="nmAgencia" size="125"  onkeypress="mascaraInt(document.getElementById('nmAgencia'));" style="width: 60%;" data-dojo-type="dijit/form/ValidationTextBox" />
                                            </td>
                                            <td class="tdRight" style="width: 25%;">
                                                <label for="cdContaCorrente">Conta Corrente:</label>
                                            </td>
                                            <td class="dojoTextBoxIECorrect" style="width: 30%;">
                                                <input id="nmContaCorrente" name="nmContaCorrente"  onkeypress="mascaraInt(document.getElementById('nmContaCorrente'));" data-dojo-type="dijit/form/TextBox"  style="width: 100%;" />
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <td class="tdRight" style="width: 10%;">
                                    <label>Natureza:</label>
                                </td>
                                <td class="dojoTextBoxIECorrect" style="width: 10%;">
                                    <input id="cbNatureza" name="cbNatureza" size="125" style="width: 30%;" data-dojo-type="dijit/form/FilteringSelect" />
                                </td>
                            </tr>
                        </table>
                        <div data-dojo-type="dijit/TitlePane" data-dojo-props="title: 'Período de Bom Para'" id="paneBomPara" open="true">
                            <table class="Table">
                                <tr>
                                    <td class="tdRight" style="width: 15%;">
                                        <label for="nome">Data Inicial:</label>
                                    </td>
                                    <td style="width: 25%;" class="dojoTextBoxIECorrect">
                                        <input type="text" id="dtInicialBP" name="dtInicialBP" class="alignDojoData" onkeypress="mascaraDataHora(event, this)" data-dojo-type="dijit.form.DateTextBox" style="width: 100%;" />
                                    </td>
                                    <td class="tdRight" style="width: 15%;">
                                        <label for="nome">Data Final:</label>
                                    </td>
                                    <td style="width: 25%;" class="dojoTextBoxIECorrect">
                                        <input type="text" id="dtFinalBP" name="dtFinalBP" class="alignDojoData" onkeypress="mascaraDataHora(event, this)" data-dojo-type="dijit.form.DateTextBox" style="width: 100%;" />
                                    </td>
                                    <td class="tdRight" style="width: 20%"></td>
                                </tr>
                            </table>
                        </div>
                        <div data-dojo-type="dijit/TitlePane" data-dojo-props="title: 'Períodos'" id="paneDatas" open="true">
                            <table class="Table">
                                <tr>
                                    <td class="tdRight" style="width: 15%;">
                                        <label for="nome">Data Inicial:</label>
                                    </td>
                                    <td style="width: 25%;" class="dojoTextBoxIECorrect">
                                        <input type="text" id="dtInicialDatas" name="dtInicialDatas" onkeypress="mascaraDataHora(event, this)" maxlength="10" class="alignDojoData" data-dojo-type="dijit.form.DateTextBox" style="width: 100%;" />
                                    </td>
                                    <td class="tdRight" style="width: 15%;">
                                        <label for="nome">Data Final:</label>
                                    </td>
                                    <td style="width: 25%;" class="dojoTextBoxIECorrect">
                                        <input type="text" id="dtFinalDatas" name="dtFinalDatas" onkeypress="mascaraDataHora(event, this)" maxlength="10" class="alignDojoData" data-dojo-type="dijit.form.DateTextBox" style="width: 100%;" />
                                    </td>
                                    <td class="tdRight" style="width: 20%">
                                        <table class="table">
                                            <tr style="vertical-align: middle;">
                                                <td class="tdRight" style="width: 7%;">
                                                    <label for="ckDtaMatricula">Emissão:</label></td>
                                                <td class="dojoTextBoxIECorrect" style="width: 1%;">
                                                    <input type="checkbox" id="ckEmissao" name="ckEmissao" data-dojo-type="dijit/form/CheckBox" class="Check" checked="true" /></td>
                                                <td class="tdRight" style="width: 7%;">
                                                    <label for="ckDtaInicial">Liquidação:</label></td>
                                                <td class="dojoTextBoxIECorrect" style="width: 1%;">
                                                    <input type="checkbox" id="ckLiquidacao" name="ckLiquidacao" disabled="disabled" data-dojo-type="dijit/form/CheckBox" class="Check" /></td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>

<div style="padding-top: 10px">
    <div class="linha_acoes" style="width: 100%"></div>
    <table style="width: 100%" class="Alinhamento">
        <tr style="width: 100%">
            <td style="text-align: center; width: 50%">
                <input type="button" id="relatorioCheques" title="Relatório" />
            </td>
        </tr>
    </table>
    <div class="linha_acoes" style="width: 100%"></div>
</div>

<div id="proAluno" data-dojo-type="dijit.Dialog" title="Pesquisar Aluno" style="display: none; width: 700px; height: 590px;">
    <div style="width: 685px; height: 590px;">
        @Html.Partial("../Secretaria/AlunoFK")
    </div>
</div>
