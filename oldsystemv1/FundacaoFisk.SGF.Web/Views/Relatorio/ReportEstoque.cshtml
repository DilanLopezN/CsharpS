@{
    ViewBag.Title = "Relatório de Estoque";
    Layout = "~/Views/Shared/_layout.cshtml";
}


@section scriptsBody{
    @Scripts.Render("~/bundles/reportEstoque")

    <script type="text/javascript">
        document.getElementById("labelTitulos").innerHTML = "Estoque";

        //**** Requerires para a Tabulação ****\\
        require([
                "dojo",
                "dojo/_base/event",
                "dojox/validate/web",
                "dojox/validate/check",
                "dijit/form/NumberTextBox",
                "dijit/form/ValidationTextBox",
                "dijit/form/Form",
                "dojox/form/Manager",
                "dijit/form/RadioButton",
                "dojo/data/ObjectStore",
                "dijit/form/FilteringSelect",
                "dijit/form/DateTextBox",
                "dijit/Dialog",
                "dojo/parser"
        ]);

        montarMetodosEstoque();
    </script>
}

<div class="apresentadorMensagem" id="apresentadorMensagem" style="display: none;"></div>
<div>
    <div class="EspacoCaixa caixaPesquisa">
        <form data-dojo-type="dojox/form/Manager" id="formRptEstoque" data-dojo-id="formRptContaCorrente" enctype="multipart/form-data" class="Formulario">
            <table class="Table">
                <tr>
                    <td style="width: 95%;">
                        <div data-dojo-type="dijit/TitlePane" data-dojo-props="title: 'Filtros'" id="panePesqGeral" open="true">
                            <table class="Table">
                                <tr>
                                    <td class="tdRight" style="width: 10%;">
                                        <label>Relatório:</label>
                                    </td>
                                    <td class="dojoTextBoxIECorrect" style="width: 20%;">
                                        <select id="pesRelatorio" name="pesRelatorio" data-dojo-type="dijit/form/FilteringSelect" required="true" style="width: 100%;"></select>
                                    </td>
                                    <td class="tdRight" style="width: 10%;">
                                        <label>Tipo Item:</label>
                                    </td>
                                    <td class="dojoTextBoxIECorrect" style="width: 20%;">
                                        <select id="tipoItem" name="tipoItem" data-dojo-type="dijit/form/FilteringSelect" required="false" style="width: 100%;"></select>
                                    </td>
                                    <td class="tdRight" style="width: 15%;">
                                        <label>Tipo de Relatório:</label>
                                    </td>
                                    <td class="dojoTextBoxIECorrect" style="width: 20%;">
                                        <select id="tipoRelatorio" name="tipoRelatorio" data-dojo-type="dijit/form/FilteringSelect" required="false" style="width: 100%;"></select>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="tdRight" style="width: 10%;">
                                        <label>Grupo:</label>
                                    </td>
                                    <td class="dojoTextBoxIECorrect" style="width: 20%;">
                                        <select id="pesGrupo" name="pesGrupo" data-dojo-type="dijit/form/FilteringSelect" required="false" style="width: 100%;"></select>
                                    </td>
                                    <td class="tdRight" style="width: 10%;">
                                        <label>Item:</label>
                                    </td>
                                    <td colspan="2" class="dojoTextBoxIECorrect" style="width: 25%;">
                                        <table class="Table">
                                            <tr>
                                                <td class="dojoTextBoxIECorrect" style="width: 95%;">
                                                    <input id="cd_item" type="hidden" value="0" />
                                                    <input id="noItem" name="noItem" size="125" style="width: 100%;" required="true" data-dojo-type="dijit/form/ValidationTextBox" disabled="disabled" />
                                                </td>
                                                <td style="width: 5%; text-align: left" class="nowrap">
                                                    <input id="pesItem" style="min-width: 18px" style="width: 100%;" />
                                                    <input id="limparItemFK" type="text" />
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                    <td class="tdRight" style="width: 15%;"></td>
                                    <td class="dojoTextBoxIECorrect" style="width: 20%;"></td>
                                </tr>
                            </table>

                            <div data-dojo-type="dijit/TitlePane" data-dojo-props="title: 'Opção para item'" id="paMostrarDetalhes" open="true">
                                <table class="Table">
                                    <tr>                                        
                                        <td class="dojoTextBoxIECorrect tdRight nowrap" style="width: 5%;" id="tdChkItensMovimento">
                                            <input type="checkbox" id="chkItensMovimento" data-dojo-type="dijit/form/CheckBox" class="Check" />
                                            <label for="chkItensMovimento">Apenas Itens com Movimento</label>
                                        </td>            
                                        <td id="tdBlank"></td>                                                                  
                                        <td class="tdRight nowrap" style="width: 3%;" id="tdCkSemCC">
                                            <input type="radio" data-dojo-type="dijit/form/RadioButton" name="ckSemCC" id="ckSemCC" value="cc" />
                                            <label for="ckSemCC">Não Mostrar Coluna Contagem</label>
                                        </td>
                                        <td></td>
                                        <td class="tdRight nowrap" style="width: 3%;" id="tdCkContagem">
                                            <input type="radio" data-dojo-type="dijit/form/RadioButton" name="ckContagem" id="ckContagem" value="cg" />
                                            <label for="ckContagem">Contagem</label>
                                        </td>
                                        <td></td>
                                        <td class="tdRight nowrap" style="width: 3%;" id="tdCkContados">
                                            <input type="radio" data-dojo-type="dijit/form/RadioButton" name="ckContados" id="ckContados" value="Mostrar Coluna Contados" />
                                            <label for="ckContados">Contados</label>
                                        </td>
                                        <td></td>
                                        <td class="tdRight" style="width: 8%;" id="tdLblCbContagem">
                                            <label>Ano/Mês Contagem:</label>
                                        </td>
                                        <td class="dojoTextBoxIECorrect" style="width: 10%;" id="tdCbContagem">
                                            <select id="cbContagem" name="cbContagem" data-dojo-type="dijit/form/FilteringSelect" required="false" style="width: 100%;"></select>
                                        </td>
                                        <td class="Pesquisa tdRight" style="width: 2%" id="tdLbledAno">
                                            <label class="AlinhaDireita">Ano:</label>
                                        </td>
                                        <td class="dojoTextBoxIECorrect" style="width: 4%;" id="tdEdAno">
                                            <input
                                                id="edAno"
                                                maxlength="4"
                                                type="text" data-dojo-type="dijit/form/NumberTextBox"
                                                class="campoGrande"
                                                style="width: 100%" value="2015" required="required"
                                                data-dojo-props="smallDelta:1, constraints:{min:1900, max:2100, places:0,pattern:'0000'}"
                                                onkeypress="mascaraInt(document.getElementById('edAno'));"
                                                name="edAno"
                                                requeride="true" />
                                        </td>
                                        <td class="Pesquisa tdRight" style="width: 3%" id="tdLblPesMes">
                                            <label class="AlinhaDireita">Mês:</label>
                                        </td>
                                        <td class="dojoTextBoxIECorrect" style="width: 5%;" id="tdPesMes">
                                            <select id="pesMes" name="pesMes" data-dojo-type="dijit/form/FilteringSelect" required="true" style="width: 100%;"></select>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div data-dojo-type="dijit/TitlePane" data-dojo-props="title: 'Período de Movimentos'" id="paneDataInicial" open="true">
                                <table class="Table">
                                    <tr>
                                        <td class="tdRight" style="width: 15%;">
                                            <label for="nome">Data Inicial:</label>
                                        </td>
                                        <td style="width: 35%;" class="dojoTextBoxIECorrect">
                                            <input type="text" id="dtInicial" name="dtBase" class="alignDojoData" onkeypress="mascaraDataHora(event, this)" maxlength="10" data-dojo-type="dijit.form.DateTextBox" style="width: 100%;" required="true" />
                                            <input type="hidden" id="dtInicialOld" class="alignDojoData" style="width: 100%;" required="false" />
                                        </td>
                                        <td class="tdRight" style="width: 15%;">
                                            <label for="nome">Data Final:</label>
                                        </td>
                                        <td style="width: 35%;" class="dojoTextBoxIECorrect">
                                            <input type="text" id="dtFinal" name="dtBase" class="alignDojoData" onkeypress="mascaraDataHora(event, this)" maxlength="10" data-dojo-type="dijit.form.DateTextBox" style="width: 100%;" required="true" />
                                            <input type="hidden" id="dtFinalOld" class="alignDojoData" style="width: 100%;" required="false" />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </td>
                </tr>
            </table>
        </form>
    </div>
    <div style="padding-top: 10px">
        <div class="linha_acoes" style="width: 100%"></div>
        <table style="width: 100%" class="Alinhamento">
            <tr style="width: 100%">
                <td style="text-align: center; width: 50%">
                    <input type="button" id="relatorio" title="Relatório" />
                </td>
            </tr>
        </table>
        <div class="linha_acoes" style="width: 100%"></div>
    </div>
</div>

<div id="fkItem" data-dojo-type="dijit.Dialog" title="Pesquisar Item" style="display: none; width: 700px; height: 590px;">
    <div style="width: 685px; height: 590px;">
        @Html.Partial("../Financeiro/ItemFK")
    </div>
</div>
