@{
    ViewBag.Title = "Carta de Quitação";
    Layout = "~/Views/Shared/_layout.cshtml";

}

@section scriptsBody{
    @Scripts.Render("~/bundles/reportCartaQuitacao")
    @Scripts.Render("~/bundles/pessoaFK")
    <script src="~/Scripts/jquery.maskedinput-1.3.js"></script>

    <script type="text/javascript">
        document.getElementById("labelTitulos").innerHTML = "Carta de Quitação";

        //**** Requerires para a Tabulação ****\\
        require([
            "dojo",
            "dijit/layout/TabContainer",
            "dijit/layout/ContentPane",
            "dijit/form/TextBox",
            "dijit/form/Select",
            "dojo/_base/event",
            "dojox/validate/web",
            "dojox/validate/check",
            "dijit/form/NumberTextBox",
            "dijit/form/ValidationTextBox",
            "dijit/form/Form",
            "dojox/form/Manager",
            "dijit/form/DateTextBox",
            "dijit/Dialog"
        ]);
        montarMetodosViewCarta();
    </script>
}
<div class="apresentadorMensagem" id="apresentadorMensagem" style="display: none;"></div>
<div>
    <div class="EspacoCaixa caixaPesquisa">
        <form data-dojo-type="dojox/form/Manager" id="formRptMatricula" data-dojo-id="formRptMatricula" enctype="multipart/form-data" class="Formulario">
            <table class="Table">
                <tr>
                    <td style="width: 95%;">
                        <div data-dojo-type="dijit/TitlePane" data-dojo-props="title: 'Filtros'" id="panePesqGeral" open="true">
                            <table class="Table">
                                <tr>
                                    <td class="CorpoFormAux AlinhaDireita nowrap" id="lbAno" style="width: 5%;">
                                        <label for="txAno">Ano:</label>
                                    </td>
                                    <td>
                                        <input data-dojo-type="dijit/form/NumberTextBox" value="2021" id="txAno" name="txAno" />
                                    </td>
                                    <td class="tdRight" style="width: 15%;">
                                        <label>Responsavel:</label>
                                    </td>
                                    <td class="dojoTextBoxIECorrect" style="width: 35%;">
                                        <table class="Table">
                                            <tr>
                                                <td class="dojoTextBoxIECorrect" style="width: 95%;">
                                                    <input id="cdAlunoPes" type="hidden" value="0" />
                                                    <input id="noAluno" name="noAluno" size="125" style="width: 100%;" required="true" data-dojo-type="dijit/form/ValidationTextBox" disabled="disabled" />
                                                </td>
                                                <td style="width: 5%; text-align: left" class="nowrap">
                                                    <input id="pesAluno" style="min-width: 18px" style="width: 100%;" />
                                                    <input type="text" id="limparAluno" />
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </td>
                    <td style="width: 5%; text-align: center">
                        <input id="pesquisarAlunoCartaQuitacao" />
                    </td>
                </tr>
            </table>
        </form>
    </div>
    <div style="padding-top: 10px">
        <div class="linha_acoes" style="width: 100%"></div>
        <div>
            <table style="width: 100%">
                <tr style="width: 100%">
                    <td style="text-align: left; width: 25%">
                        @*<div class="linkAcoes" id="linkAcoes"></div>*@
                    </td>
                    <td style="text-align: center; width: 50%;">
                        <input type="button" id="relatorio1" title="Emitir Carta(s)" />
                        <input type="button" id="relatorioCarta" title="Relatório" />
                    </td>
                    <td style="text-align: right; width: 25%">
                        
                    </td>
                </tr>
            </table>
        </div>
        <div class="linha_acoes" style="width: 100%"></div>
    </div>
    <div data-dojo-type="dijit/layout/ContentPane" style="padding-left: 0px; width: 100%">
        <div class="gridCadBasic">
            <div id="gridAlunoCartaQuitacao"></div>
        </div>
    </div>
    <div style="padding-top: 10px">
        <div class="linha_acoes" style="width: 100%"></div>
        <table style="width: 100%" class="Alinhamento">
            <tr style="width: 100%">
                <td style="text-align: center; width: 50%">
                    <input type="button" id="relatorio" title="Emitir Carta(s)" />
                    
                </td>
            </tr>
        </table>
        <div class="linha_acoes" style="width: 100%"></div>
    </div>
</div>

<div id="proPessoa" data-dojo-type="dijit.Dialog" title="Pesquisar Pessoa" style="display: none; width: 800px; height: 590px;">
    <div style="height: 590px; width: 780px">
        @Html.Partial("../Pessoa/PessoaFK")
    </div>
</div>
