@{
    ViewBag.Title = "Relatório de Inventário";
    Layout = "~/Views/Shared/_layout.cshtml";
}

@section head {
    <link href="~/Content/themes/base/dojo1.8.5r/dojox/form/resources/CheckedMultiSelect.css" rel="stylesheet" />
}

@section scriptsBody{
    @Scripts.Render("~/bundles/reportInventario")

    <script type="text/javascript">
        document.getElementById("labelTitulos").innerHTML = "Inventário";

        //**** Requerires para a Tabulação ****\\
        require([
            "dojo",
            "dojo/_base/event",
            "dojox/validate/web",
            "dojox/validate/check",
            "dijit/form/NumberTextBox",
            "dijit/form/ValidationTextBox",
            "dijit/form/Form",
            "dojox/form/Manager",
            "dijit/form/RadioButton",
            "dojo/data/ObjectStore",
            "dijit/form/FilteringSelect",
            "dijit/form/DateTextBox",
            "dijit/Dialog",
            "dojo/parser"
        ]);

        montarMetodosEstoque();
    </script>
}

<div class="apresentadorMensagem" id="apresentadorMensagem" style="display: none;"></div>
<div>
    <div class="EspacoCaixa caixaPesquisa">
        <form data-dojo-type="dojox/form/Manager" id="formRptEstoque" data-dojo-id="formRptContaCorrente" enctype="multipart/form-data" class="Formulario">
            <table class="Table">
                <tr>
                    <td style="width: 95%;">
                        <div data-dojo-type="dijit/TitlePane" data-dojo-props="title: 'Filtros'" id="panePesqGeral" open="true">
                            <table class="Table">
                                <tr>
                                    <td class="tdRight" style="width: 10%;">
                                        <label>Todas as Escolas:</label>
                                    </td>
                                    <td class="dojoTextBoxIECorrect" style="width: 20%;">
                                        <input type="checkbox" id="ckEscola" data-dojo-type="dijit/form/CheckBox" class="Check" checked="checked" />
                                    </td>
                                    <td class="tdRight" style="width: 10%;">
                                        <label>Data de Análise:</label>
                                    </td>
                                    <td class="dojoTextBoxIECorrect" style="width: 20%;">
                                        <input type="text" id="dtBase" name="dtBase" class="alignDojoData" onkeypress="mascaraDataHora(event, this)" maxlength="10" data-dojo-type="dijit.form.DateTextBox" style="width: 100%;" required="true" />
                                        <input type="hidden" id="dtBaseOld" class="alignDojoData" style="width: 100%;" required="false" />
                                    </td>
                                    <td class="tdRight nowrap" style="width: 5%;">
                                        <label>Tipo de Relatório:</label>
                                    </td>
                                    <td class="dojoTextBoxIECorrect" style="width: 20%;">
                                        <select id="tipoRelatorio" name="tipoRelatorio" data-dojo-type="dijit/form/FilteringSelect" required="false" style="width: 100%;"></select>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="tdRight nowrap" style="width: 10%;">
                                        <label for="cbTipoItem">Tipo de Item:</label>
                                    </td>
                                    <td class="alignDojoData" colspan="2" style="width: 20%;">
                                        <select id="cbTipoItem"
                                                data-dojo-id="cbTipoItem"
                                                data-dojo-props='dropDown:true'
                                                name="cbTipoItem"
                                                multiple="multiple"
                                                onAfterAddOptionItem="setoptions"
                                                data-dojo-type="dojox/form/CheckedMultiSelect" style="width: 100%">
                                        </select>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </td>
                </tr>
            </table>
        </form>
    </div>
    <div style="padding-top: 10px">
        <div class="linha_acoes" style="width: 100%"></div>
        <table style="width: 100%" class="Alinhamento">
            <tr style="width: 100%">
                <td style="text-align: center; width: 50%">
                    <input type="button" id="relatorio" title="Relatório" />
                </td>
            </tr>
        </table>
        <div class="linha_acoes" style="width: 100%"></div>
    </div>
</div>
