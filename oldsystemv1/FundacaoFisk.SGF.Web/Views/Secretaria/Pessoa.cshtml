@{
    ViewBag.Title = "Pessoa Relacionada";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    @Scripts.Render("~/bundles/pessoa")
    <script src="~/Scripts/jquery.maskedinput-1.3.js"></script>
    <script src="~/Scripts/jquery.cep-1.0.js"></script>
}

@section scriptsBody{
    <script type="text/javascript">
        document.getElementById("labelTitulos").innerHTML = "Pessoa Relacionada";
        //**** Requerires para a Tabulação ****\\
        require([
                "dojo/NodeList-traverse",
                "dijit/form/Select",
                "dijit/form/TextBox",
                "dojo/_base/event",
                "dojox/validate/web",
                "dojox/validate/check",
                "dijit/form/NumberTextBox",
                "dijit/form/ValidationTextBox",
                "dijit/form/Form",
                "dojox/form/Manager",
                "dijit/Tooltip",
                "dijit/form/TimeTextBox"
        ]);

        montaGridPessoa();
    </script>
}
<input type="hidden" id="link" value="" />
<input type="hidden" id="parametroEscolaInternacional" value="0" />
<div class="apresentadorMsg" id="apresentadorMensagem" style="display:none;"></div>
<script type="text/javascript">
    showCarregando();
</script>
<div>
    @*Criação da Grade de Escola*@
    <div class="EspacoCaixa caixaPesquisa">
        <table class="Table">
            <tr class="Pesquisa">
                <td class="AlinhaDireita" style="width: 7%;">
                    <label for="nome">Nome:</label></td>
                <td style="width: 29%;" class="dojoTextBoxIECorrect">
                    <input type="text" id="_nome" name="Nome" style="width: 100%;" data-dojo-type="dijit/form/TextBox" /></td>
                <td class="AlinhaDireita" style="width: 9%;">
                    <label for="fantasia">Nome Reduzido:</label></td>
                <td style="width: 15%;" class="dojoTextBoxIECorrect">
                    <input type="text" id="_fantasia" name="fantasia" style="width: 100%;" data-dojo-type="dijit/form/TextBox" /></td>
                <td class="AlinhaDireita " style="width: 7%;">
                    <label for="inicioPessoa">Início:</label></td>
                <td>
                    <input type="checkbox" id="inicioPessoa" data-dojo-type="dijit/form/CheckBox" class="Check" /></td>
                <td class="AlinhaDireita" style="width: 7%;">
                    <label>Papel:</label></td>
                <td>
                    <input data-dojo-type="dijit/form/FilteringSelect" id="papel" style="width: 100%; max-width: 100px" /></td>
                <td rowspan="2">
                    <input id="pesquisarPessoa" />
                </td>
            </tr>
            <tr class="Pesquisa" style="padding-left: 10px; padding-bottom: 10px; padding-right: 10px;">

                <td class="AlinhaDireita" style="width: 7%;">
                    <label>Natureza:</label></td>
                <td>
                    <input type="text" id="tipoPessoa" name="Tipo Pessoa" />
                </td>
                <td class="AlinhaDireita" style="width: 7%;">
                    <label>CPF \ CNPJ:</label></td>
                <td>
                    <input type="text" id="_cnpjCpf" name="CnpjCpf" size="11" style="width: 75%;" data-dojo-type="dijit/form/TextBox" /></td>
                <td class="AlinhaDireita" style="width: 7%;">
                    <label>Gênero:</label></td>
                <td style="width: 10%;">
                    <select id="nm_sexo" name="nm_sexo" data-dojo-type="dijit/form/FilteringSelect" style="width: 100%;"></select>
                </td>
                <td></td>

            </tr>
        </table>
    </div>

    <div style="padding-top: 10px">
        <div class="linha_acoes" style="width: 100%"></div>
        <div>
            <table style="width: 100%">
                <tr style="width: 100%">
                    <td style="text-align: left; width: 25%">
                        <div class="linkAcoes" id="linkAcoes"></div>
                    </td>
                    <td style="text-align: center; width: 50%;">
                        <input id="novaPessoa" title="Novo" />
                        <input id="relatorioPessoa" title="Relatório" />
                    </td>
                    <td style="text-align: right; width: 25%">
                        <span class="linkSelecionados" id="linkSelecionados"></span>
                    </td>
                </tr>
            </table>
        </div>
        <div class="linha_acoes" style="width: 100%"></div>
    </div>

    <div data-dojo-type="dijit/layout/ContentPane" style="padding-left: 0px; width: 100%">
        <div class="gridCadBasic">
            <div id="gridPessoa"></div>
        </div>
    </div>
    @*Fim da crição da grade*@
    <div id="formulario" data-dojo-type="dijit.Dialog" title="Cadastro de Pessoa Relacionada" style="max-width: 727px; width: 100%;">

        <div class="sessao_form" style="margin-left: -8px;">
            <span id="counter_form"></span>
        </div>

        <div class="corpo_interno">
            <div style="width: 100%; height: 460px;" class="scroll">
                <div class="apresentadorMsg" id="apresentadorMensagemPessoa" style="display: none;"></div>
                @*<div>*@
                @Html.Partial("../Pessoa/CadPessoaPartial")
            </div>
            <div class="containerCrud">
                <div class="linha_acoes" style="width: 100%"></div>
                <div style="text-align: center">
                    <span id="divIncluirPessoa">
                        <input type="button" id="incluirPessoa" title="incluir" /></span>
                    <span id="divAlterarPessoa" style="display: none;">
                        <input type="button" id="alterarPessoa" title="Alterar" /></span>
                    <span id="divExcluirPessoa" style="display: none;">
                        <input type="button" id="deletePessoa" title="Excluir" /></span>
                    <span id="divClearPessoa">
                        <input type="button" id="limparPessoa" title="Limpar" /></span>
                    <span id="divCancelarPessoa" style="display: none;">
                        <input type="button" id="cancelarPessoa" title="Cancelar" /></span>
                    <span id="divFecharPessoa">
                        <input type="button" id="fecharPessoa" title="Fechar" /></span>
                </div>
                <div class="linha_acoes" style="width: 100%"></div>
            </div>
        </div>
    </div>
</div>
