@model FundacaoFisk.SGF.Web.Services.Auth.Model.UserCredential
@{
    ViewBag.Title = "Login";
}
@section head {
    <style>
         .cc-btn {
            border-radius: 20px!important;
        }
        .cc-DISMISS {
            display: none!important;
        }
        
        .cc-revoke {
            display: none !important;
        
        }
    </style>
    <link href="~/Content/dojoSGF.css" rel="stylesheet" />
    <link href="~/Content/screen.css" rel="stylesheet" />
    <link href="~/Content/themes/base/dojo1.8.5r/dijit/themes/claro/claro.css" rel="stylesheet" />
    <script src="~/Scripts/apresentadorMensagemAnonimo_v31.js"></script>
    <script src="~/Scripts/util_v31.js"></script>
    @Scripts.Render("~/bundles/login")
    <script src="~/Scripts/jquery-1.8.1.min.js"></script>
    <script src="~/Content/themes/base/dojo1.8.5r/dojo/dojo.js" data-dojo-config="async: true, isDebug: true, parseOnLoad: true, locale: 'pt-br', name: 'SpellCheck', lang:'pt-br'"></script>
    <script type="text/javascript">
        require(["dijit/form/TextBox", "dijit/Dialog", "dojox/validate/web"]);
        require(["dojo/ready"], function (ready) {
            ready(function () {
                verificaAmbienteTeste();
                showCarregando(document.getElementById('login-bg'));
                dojo.query("#Password").on("keyup", function (e) {
                    if (e.keyCode == 13)
                        login();
                });
                dojo.query("#ConfirmaNovaSenha").on("keyup", function (e) {
                    if (e.keyCode == 13)
                        loginChangePassword();
                });
                dijit.byId("alterarSenha").on("click", function () {
                    loginChangePassword();
                });
                dijit.byId("bt_senhaPerdida").on("click", function () {
                    senhaPerdida();
                });
            });
        });
    </script>
    <script>
        var _prum = [['id', '570d92daabe53d3930288c12'],['mark', 'firstbyte', (new Date()).getTime()]];
        (function () {
            var s = document.getElementsByTagName('script')[0], p = document.createElement('script');
            p.async = 'async';
            p.src = '//rum-static.pingdom.net/prum.min.js';
            s.parentNode.insertBefore(p, s);
        })();
    </script>
}
<div id="divCarregando" style="display: none">
    <img id="imgCarregando" src="~/images/carregando.gif" />
    <input type="hidden" id="_AMB" value='@AmbienteTeste' />
</div>
<input type="hidden" id="_ER0" value='@EnderecoRelativoWeb' />
<div id="login-bg">
    <table style="height:95%; width: 95%;">
        <tr><td colspan="3" style="height:33%"><span id="tituloAmbienteTeste" style="display:none">Ambiente de Teste</span></td></tr>
        <tr><td colspan="3" style="height:33%">&nbsp;</td></tr>
        <tr>
            <td style="width:30%">&nbsp;</td>
            <td style="height:33%; width:50%;">
                <div id="login-inner" style="width:80%;">
                    <form data-dojo-type="dojox/form/Manager" id="formlogin">
                        <table class="Table" style="min-width:190px">
                            <tr>
                                <th style="text-align: right; width:15%">Usuário:</th> 
                                <td style="width:55%">
                                    <input style="width: 100%;" data-val="true" data-val_requerid="O campo de login é obrigatório" id="Login" name="Login" type="text" data-dojo-type="dijit/form/TextBox" />&nbsp;
                                </td>
                                <td style="width:30%">&nbsp;</td>
                            </tr>
                            <tr>
                                <th style="text-align: right">Senha:</th>
                                <td>
                                    <table style="width:100%" class="Table">
                                        <tr>
                                            <td><input style="width: 100%;" data-val="true" data-val-requerid="O campo de senha é obrigatório." id="Password" name="Password" type="password" data-dojo-type="dijit/form/TextBox" /></td>
                                            <td id="divSubmit" style="text-align:right; width: 48px"><input id="submitLogin" type="button" class="submit-login" value="" onclick="login();" /></td>
                                        </tr>
                                    </table>
                                </td>
                                <td>&nbsp;</td>
                            </tr>
                            <tr id="linkSenhaPerdida">
                                <th></th>
                                <td style="text-align: right"  class="senhaPerdida">
                                    <a onclick="montarDialog('dlgSenhaPerdida', dijit.byId(dlgSenhaPerdida))">Esqueci minha senha</a>
                                </td>
                            </tr>
                            <tr style="padding-bottom: 40px; border: none; display: none" id="divEscolas">
                                <th style="text-align: right">Escola:</th>
                                <td style="font-size: small;">
                                    <table style="width: 100%" class="Table">
                                        <tr>
                                            <td>
                                                <select id="cb_escola" name="cb_escola" style="width: 100%;" data-dojo-type="dijit/form/FilteringSelect"></select></td>
                                            <td id="divSubmitEscola" style="display: none; text-align: right; width: 48px">
                                                <input type="button" class="submit-login" value="" onclick="marcarEscola();" /></td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>
                    </form>
                </div>
            </td>
            <td style="width:20%">&nbsp;</td>
        </tr>
    </table>
</div>
<script type="text/javascript">
    showCarregando(document.getElementById('login-bg'));
</script>
<div id="dlgMudancaSenha" data-dojo-type="dijit.Dialog" title="Trocar Senha" style="display: none; width: 400px; min-height: 200px;" class="font">
    <div class="apresentadorMsg" id="apresentadorMensagemTrocarSenha" style="display: none;"></div>
    <div class="corpo_interno" style="max-width: 395px; padding-top: 15px;">
        <form data-dojo-type="dojox/form/Manager" enctype="multipart/form-data" id="formChangePassword">
            <div style="width: 100%; text-align: center">
                <div>
                    <table class="Table">
                        <tr>
                            <td class="tdRight" style="width: 50%">
                                <label>Nova Senha:</label>
                            </td>
                            <td style="text-align: left">
                                <input id="NovaSenha" name="NovaSenha" type="password" style="width: 235px" data-dojo-type="dijit/form/ValidationTextBox" required="true" />
                            </td>
                        </tr>
                        <tr>
                            <td class="tdRight" style="width: 50%">
                                <label>Confirmar Senha:</label>
                            </td>
                            <td style="text-align: left">
                                <input id="ConfirmaNovaSenha" name="ConfirmaNovaSenha" type="password" style="width: 235px" data-dojo-type="dijit/form/ValidationTextBox" required="true" />
                            </td>
                        </tr>
                        <tr>
                            <td>&nbsp</td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <div class="linha_acoes" style="width: 100%"></div>
                                <input data-dojo-type="dijit/form/Button" data-dojo-props="label: 'Alterar', iconClass:'dijitEditorIcon dijitEditorIconRedo'" type="button" id="alterarSenha" />
                                <div class="linha_acoes" style="width: 100%"></div>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </form>
    </div>
</div>
@* Senha perdida *@
<div id="dlgSenhaPerdida" data-dojo-type="dijit.Dialog"  data-dojo-id="dlgSenhaPerdida" title="Enviar senha para e-mail" style="display: none; width: 400px; min-height: 175px;" class="font">
    <div class="apresentadorMsg" id="apresentadorMensagemSenhaPerdida" style="display: none;"></div>
    <div class="corpo_interno" style="max-width: 395px; padding-top: 15px;">
        <form data-dojo-type="dojox/form/Manager" enctype="multipart/form-data" id="formSenhaPerdida">
            <div style="width: 100%; text-align: center">
                <div>
                    <table class="Table">
                        <tr>
                            <td class="tdRight" style="width: 22%">
                                <label>Usuário:</label>
                            </td>
                            <td style="text-align: left">
                                <input id="des_login" name="NovaSenha" maxlength="32" type="text" style="width: 235px" data-dojo-type="dijit/form/ValidationTextBox" required="true" />
                            </td>
                        </tr>
                        <tr>
                            <td class="tdRight" style="width: 22%">
                                <label>E-mail:</label>
                            </td>
                            <td style="text-align: left">
                                <input id="des_email" name="des_email" maxlength="64" type="text" style="width: 235px" data-dojo-type="dijit/form/ValidationTextBox" required="true" onblur="isEmail(this.value)" data-dojo-props="validator:dojox.validate.isEmailAddress, invalidMessage:'E-mail com formato inválido!'" />
                            </td>
                        </tr>
                        <tr>
                            <td>&nbsp</td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <div class="linha_acoes" style="width: 100%"></div>
                                <input data-dojo-type="dijit/form/Button" data-dojo-props="label: 'Enviar', iconClass:'dijitEditorIcon dijitEditorIconEmail'" type="button" id="bt_senhaPerdida" />
                                <input data-dojo-type="dijit/form/Button" data-dojo-props="onClick:function(){dlgSenhaPerdida.hide();}, label: 'Fechar', iconClass:'dijitEditorIcon dijitEditorIconCancel'" type="button" id="bt_fechar"/>
                                <div class="linha_acoes" style="width: 100%"></div>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </form>
    </div>
</div>
